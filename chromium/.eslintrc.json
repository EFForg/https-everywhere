{
  "extends": "google",
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true,
    "webextensions": true
  },
  "parserOptions": {
    "sourceType": "script"
  },
  "rules": {
    "max-len": ["warn", {
      "code": 80,
      "tabWidth": 2,
      "ignoreUrls": true,
      "ignorePattern": "^goog\\\\.(module|require)"
    }],
    "require-jsdoc": ["warn", {
      "require": {
        "FunctionDeclaration": true,
        "MethodDefinition": true,
        "ClassDeclaration": true
      }
    }],
    "valid-jsdoc": ["warn", {
      "requireParamDescription": false,
      "requireReturnDescription": false,
      "requireReturn": false,
      "prefer": {
        "returns": "return"
      }
    }]
  }
}
