{
  "env": {
    "browser": true,
    "es6": true,
    "webextensions": true
  },
  "overrides": [
    {
      "files": ["background.js", "entry.js", "incognito.js", "rules.js" ,"store.js", "util.js"],
      "parserOptions": {
        "sourceType": "module"
      }
    }
  ],
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "script"
  },
  "rules": {
    "indent": ["error", 2],
    "no-unused-vars": "error",
    "no-undef": "error"
  }
}
