{
  "env": {
    "browser": true,
    "es6": true,
    "webextensions": true
  },
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "script"
  },
  "rules": {
    "eqeqeq": ["error", "always", { "null": "ignore" }],
    "indent": ["error", 2, {"outerIIFEBody": 0}],
    "no-unused-vars": "error",
    "no-undef": "error"
  },
  "globals": {
    "exports": true,
    "util": true,
    "store": true,
    "background": true,
    "rules": true,
    "incognito": true
  }
}
