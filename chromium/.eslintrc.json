{
  "env": {
    "browser": true,
    "es6": true,
    "webextensions": true
  },
  "overrides": [
    {
      "files": ["incognito.js", "store.js", "rules.js", "util.js", "background.js"],
      "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "webextensions": true
      }
    }
  ],
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "script"
  },
  "rules": {
    "indent": ["error", 2],
    "no-unused-vars": "error",
    "no-undef": "error"
  }
}
