		<exclusion pattern="^http://shop.lego.com/(?!VIP/modal/vipLearnMoreModal\.jsp)" />

			<!--	+ve:
					-->
			<test url="http://shop.lego.com/VIP" />

			<!--	-ve:
					-->
			<test url="http://shop.lego.com/VIP/modal/vipLearnMoreModal.jsp" />

