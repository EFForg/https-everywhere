<ruleset name="Navicast.jp">

	<target host="navicast.jp" />
	<target host="admin.navicast.jp" />
	<target host="admin.global.navicast.jp" />
	<target host="info.navicast.jp" />
	<target host="db.navicast.jp" />
	<target host="stage.navicast.jp" />
	<target host="admin.jre.navicast.jp" />
	<target host="jre.navicast.jp" />

	<securecookie host="." name="." />

	<test url="http://navicast.jp/NavicastApi.js" />
	<test url="http://admin.navicast.jp/api.php" />
	<test url="http://admin.jre.navicast.jp/efo/" />
	<test url="http://jre.navicast.jp/api/nc2/tpl/inner.php" />

	<rule from="^http:"
		to="https:" />

</ruleset>
