<ruleset name="Criosweb (partial)">


	<!--	mixed content issues on https://infoeuri.criosweb.ro/blog/ and https://luci.criosweb.ro/ -->
	
	<target host="infoeuri.criosweb.ro" />
	<target host="luci.criosweb.ro" />
	
	<rule from="^http://(infoeuri|luci)\.criosweb\.ro/(blog/)?wp-(content|includes)/(.+)"
		to="https://$1.criosweb.ro/$2wp-$3/$4" />

		<test url="http://infoeuri.criosweb.ro/blog/wp-content/uploads/2014/07/august-1038x576.jpg" />
		<test url="http://infoeuri.criosweb.ro/blog/wp-includes/js/tw-sack.min.js?ver=1.6.1" />
		<test url="http://luci.criosweb.ro/wp-content/uploads/2015/11/board-config.png" />
		<test url="http://luci.criosweb.ro/wp-includes/js/tw-sack.min.js?ver=1.6.1" />

	<target host="criosweb.ro" />
	<target host="www.criosweb.ro" />
	
	<rule from="^http:" to="https:" />

		<test url="http://criosweb.ro/" />
		<test url="http://www.criosweb.ro/" />

</ruleset>
