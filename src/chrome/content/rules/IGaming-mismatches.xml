<ruleset name="iGaming (mismatches)" default_off="mismatch, self-signed">

	<!--	plesk	-->
	<target host="best-pariuri-online.com"/>
	<target host="www.best-pariuri-online.com"/>
	<target host="betclair.com"/>
	<target host="www.betclair.com"/>
	<target host="igaming.biz"/>
	<target host="www.igaming.biz"/>
	<target host="pariloto.net"/>
	<target host="pariuri.pariloto.net"/>
	<target host="www.pariloto.net"/>
	<target host="pronosticuri-tenis.com"/>
	<target host="www.pronosticuri-tenis.com"/>
	<target host="soccerpunt.com"/>
	<target host="www.soccerpunt.com"/>
	<target host="tipseri.net"/>
	<target host="www.tipseri.net" />

	<securecookie host="^(?:best-pariuri-online|betclair|soccerpunt)\.com$" name=".+" />
	<securecookie host="^igaming\.biz$" name=".+" />
	<securecookie host="^pariuri\.pariloto\.net$" name=".+" />
	<securecookie host="^tipseri\.net$" name=".+" />

	<rule from="^http://(?:www\.)?igaming\.biz/"
		to="https://igaming.biz/"/>

	<!--	redirects as so	-->
	<rule from="^http://(?:pariuri\.|www\.)?pariloto\.net/"
		to="https://pariuri.pariloto.net/"/>

	<rule from="^http://(?:www\.)?(betclair|best-pariuri-online|pronosticuri-tenis|soccerpunt)\.com/"
		to="https://$1.com/"/>

	<rule from="^http://(?:www\.)?tipseri\.net/"
		to="https://tipseri.net/"/>

</ruleset>
