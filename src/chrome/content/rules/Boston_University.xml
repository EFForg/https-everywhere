<!--
	Nonfunctional subdomains:

		- blackboard

-->
<ruleset name="Boston University (partial)">

	<target host="bu.edu" />
	<target host="*.bu.edu" />


	<securecookie host="^(?:www)?\.bu\.edu$" name=".+" />


	<!--	!www doesn't work over https.
						-->
	<rule from="^http://(?:www\.)?bu\.edu/"
		to="https://www.bu.edu/" />

	<rule from="^http://tandem\.bu\.edu/"
		to="https://tandem.bu.edu/" />

</ruleset>
