<!-- 
	----- CGI eID-tjÃ¤nst ----- 
	
	authenticators and formmails for .SE gov sites etc

	known authenticator subdomains:

		*.idp.funktionstjanster.se  (most traffic is on this one)

		*.idpat.funktionstjanster.se
		*.idpst.funktionstjanster.se
		*.me.funktionstjanster.se
		*.testidp.funktionstjanster.se

	See also: 

		- bankid.com.xml

		- https://doc.funktionstjanster.se/
-->

<ruleset name="funktionstjanster.se">

	<target host="*.funktionstjanster.se" />
	
	<!--
		*.idp.funktionstjanster.se is where most of the action is,

		using as pattern to match all authenticators
	-->

	<test url="http://m00-mg-local.idp.funktionstjanster.se/" />
	<test url="http://m01-mg-local.idp.funktionstjanster.se/" />
	<test url="http://m02-mg-local.idp.funktionstjanster.se/" />

	<rule from="^http://(m\d{2}-mg-local\.\w*)\.funktionstjanster\.se/" 
            to="https://$1.funktionstjanster.se/" />

</ruleset>
