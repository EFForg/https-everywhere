<!--
	Fully covered subdomains:

		- (www.)
		- manage

-->
<ruleset name="ServerPilot.io">

	<target host="serverpilot.io" />
	<target host="*.serverpilot.io" />


	<securecookie host="^\.serverpilot\.io$" name=".+" />


	<rule from="^http://(manage\.|www\.)?serverpilot\.io/"
		to="https://$1serverpilot.io/" />

</ruleset>
