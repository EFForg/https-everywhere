<!--
	All HTTPS, everywhere.

	This ruleset is primarily useful to prevent first-use downgrade attacks.

-->
<ruleset name="strugee.net">

	<!--	Direct rewrites:
				-->
	<target host="strugee.net" />
	<target host="*.strugee.net" />


	<rule from="^http:" to="https:" />

	<test url="http://strugee.net/" />
	<test url="http://www.strugee.net/" />
	<test url="http://bugzilla.strugee.net/" />
	<test url="http://mail.strugee.net/" />
	<test url="http://pump.strugee.net/" />
	<test url="http://pod.strugee.net/" />
	<test url="http://cloud.strugee.net/" />
	<test url="http://null.strugee.net/" />
	<test url="http://wiki.strugee.net/" />
	<test url="http://etherpad.strugee.net/" />
	<test url="http://friendica.strugee.net/" />
	<test url="http://util.strugee.net/" />
</ruleset>
