<!--

	Problematic subdomains:

		- blog	(invalid cert)
		- docs	(invalid cert)
		- go	(invalid cert)

-->
<ruleset name="Drift.com">

	<target host="app.drift.com" />
	<target host="event.api.drift.com" />
	<target host="www.drift.com" />

	<test url="http://event.api.drift.com/track" />

	<rule from="^http:"
		to="https:" />

</ruleset>
