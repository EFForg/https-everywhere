-->
<ruleset name="IAR.com">

	<!--	Direct rewrites:
				-->
	<target host="www.iar.com" />

	<!--	Complications:
				-->
	<target host="iar.com" />


	<!--securecookie host="^www\.iar\.com$" name="^ASP\.NET_SessionId$" /-->
