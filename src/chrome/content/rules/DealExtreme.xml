<ruleset name="Deal Extreme">
  <target host="www.dealextreme.com" />
  <target host="dealextreme.com" />
  <target host="club.dealextreme.com" />
  <target host="dx.com" />
  <target host="www.dx.com" />
  <target host="club.dx.com" />
  <target host="s.dx.com" />
  <target host="e.dealextreme.com" />
  <target host="img.dxcdn.com" />

  <rule from="^http://(?:www\.)?dealextreme\.com/" to="https://www.dealextreme.com/"/>
  <rule from="^http://club\.dealextreme\.com/" to="https://club.dealextreme.com/" />
  <rule from="^http://(www\.)?dx\.com/" to="https://www.dx.com/" />
  <rule from="^http://(club|s)\.dx\.com/" to="https://$1.dx.com/" />
  <rule from="^http://e\.dealextreme\.com/" to="https://e.dealextreme.com/" />
  <rule from="^http://img\.dxcdn\.com/" to="https://img.dxcdn.com/" />
</ruleset>
