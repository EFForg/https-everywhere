<!--
	*.cloudflare-dns.com wildcard DNS Record.

	Other CloudFlare rulesets:

		- CloudFlare.xml
		- CloudFlare_Challenge.com.xml
		- Cloudflarestatus.com.xml

	CloudFlare sets insecure __cfduid and cf_clearance
	wildcard cookies for every client domain.

-->
<ruleset name="CloudFlare-DNS.com">

	<!--	Direct rewrites:
				-->
	<target host="cloudflare-dns.com" />
	<target host="www.cloudflare-dns.com" />
	<target host="1dot1dot1dot1.cloudflare-dns.com" />

	<securecookie host=".+" name=".+" />

	<rule from="^http:"
		to="https:" />

</ruleset>
