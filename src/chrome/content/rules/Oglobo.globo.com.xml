<!--
	Nonfunctional hosts in *.oglobo.globo.com:

	h: http redirect
	m: certificate mismatch
	r: connection refused
	s: self-signed certificate
	t: timeout on https
-->
<ruleset name="Jornal O Globo">
	<target host="oglobo.globo.com" />
	
	<securecookie host="^\w" name=".+" />

	<rule from="^http:" to="https:" />
</ruleset>
