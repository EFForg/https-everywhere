<!--
	For rules not causing false/broken MCB, see Blockstream.com.xml.

-->
<ruleset name="Blockstream.com (false MCB)" platform="mixedcontent">

	<target host="blockstream.com" />
	<target host="*.blockstream.com" />


	<securecookie host="^\.blockstream\.com$" name=".+" />


	<rule from="^http://(www\.)?blockstream\.com/"
		to="https://$1blockstream.com/" />

</ruleset>
