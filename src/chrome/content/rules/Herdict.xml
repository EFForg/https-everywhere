<!--
	All non-dev sites redirect to https://cyber.harvard.edu/research/herdict
-->
<ruleset name="Herdict">

	<target host="herdict.org" />
	<target host="www.herdict.org" />
	<target host="dev.herdict.org" />
	<target host="dev2.herdict.org" />
	<target host="ar.herdict.org" />
	<target host="ru.herdict.org" />
	<target host="nardikt.ru" />
	<target host="www.nardikt.ru" />
	<target host="dev.nardikt.ru" />
	<target host="dev2.nardikt.ru" />
	<target host="ar.nardikt.ru" />
	<target host="ru.nardikt.ru" />


	<securecookie host="^www\.(?:herdic|nardik)t\.org" name=".+" />


	<rule from="^http://dev2?\.(herdict\.org|nardikt\.ru)/"
		to="https://dev.$1/" />

	<rule from="^http://(?:(www|ar|ru)\.)?(herdict\.org|nardikt\.ru)/"
		to="https://herdict.org/" />

</ruleset>
