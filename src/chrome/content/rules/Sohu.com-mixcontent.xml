<ruleset name="Sohu.com-mixedcontent">

	<target host="www.sohu.com" />
	<exclusion pattern="^http://www\.sohu\.com/$" />
	<rule from="^http://www\.sohu\.com/sohuflash_1\.js"
			to="https://www.sohu.com/sohuflash_1.js" />
	<rule from="^http://www\.sohu\.com/upload/"
			to="https://www.sohu.com/upload/" />
		<test url="http://www.sohu.com/sohuflash_1.js" />
		<test url="http://www.sohu.com/upload/style/style150302.css" />
		<test url="http://www.sohu.com/upload/images9_18/bg.png" />
		<test url="http://www.sohu.com/upload/images20151228/bg01.gif" />
		<test url="http://www.sohu.com/upload/images/server/icon08.jpg" />

	<target host="ad.sohu.com" />
	<exclusion pattern="^http://ad\.sohu\.com/$" />
	<rule from="^http://ad\.sohu\.com/upload/"
			to="https://ad.sohu.com/upload/" />
		<test url="http://ad.sohu.com/upload/ad20120517/images/bg_nav.gif" />
		<test url="http://ad.sohu.com/upload/ad20120521/images/new_283x36.jpg" />
		<test url="http://ad.sohu.com/upload/373-355.swf" />

	<target host="money.sohu.com" />
	<exclusion pattern="^http://money\.sohu\.com/$" />
	<rule from="^http://money\.sohu\.com/upload/"
			to="https://money.sohu.com/upload/" />
		<test url="http://money.sohu.com/upload/shcj/css/base.css" />
		<test url="http://money.sohu.com/upload/money20151222/js/MDC_FocusImage.js" />

	<target host="news.sohu.com" />
	<exclusion pattern="^http://news\.sohu\.com/$" />
	<rule from="^http://news\.sohu\.com/upload/"
			to="https://news.sohu.com/upload/" />
		<test url="http://news.sohu.com/upload/style.css" />
		<test url="http://news.sohu.com/upload/images/pic09.jpg" />
		<test url="http://news.sohu.com/upload/images/flash.swf" />

	<target host="stock.sohu.com" />
	<exclusion pattern="^http://stock\.sohu\.com/$" />
	<rule from="^http://stock\.sohu\.com/upload/"
			to="https://stock.sohu.com/upload/" />
		<test url="http://stock.sohu.com/upload/stockindex2015/static/css/base.css" />
		<test url="http://stock.sohu.com/upload/stockindex2015/static/images/stocklogo.gif" />
		<test url="http://stock.sohu.com/upload/stockindex2015/static/images/ico.png" />

	<target host="q.stock.sohu.com" />
	<exclusion pattern="^http://q\.stock\.sohu\.com/$" />
	<rule from="^http://q\.stock\.sohu\.com/app1/stockgroup\.up"
			to="https://q.stock.sohu.com/app1/stockgroup.up" />
		<test url="http://q.stock.sohu.com/app1/stockgroup.up" />

	<target host="tv.sohu.com" />
	<exclusion pattern="^http://tv\.sohu\.com/$" />
	<rule from="^http://tv\.sohu\.com/([\w/-]+)\.(inc|jpg|js|png|swf)"
			to="https://tv.sohu.com/$1.$2" />
		<test url="http://tv.sohu.com/commonfrag/vrs_flashPlayer.inc" />
		<test url="http://tv.sohu.com/upload/space/skin/imgs/avatar_s.jpg" />
		<test url="http://tv.sohu.com/frag/vrs_inc/phb_variety_day_10_simple.js" />
		<test url="http://tv.sohu.com/upload/Trace/wrating.js" />
		<test url="http://tv.sohu.com/upload/static/global/skin/images/icon_merge.png" />
		<test url="http://tv.sohu.com/upload/swf/20161102/Main.swf" />

	<target host="push.my.tv.sohu.com" />
	<exclusion pattern="^http://push\.my\.tv\.sohu\.com/$" />
	<rule from="^http://push\.my\.tv\.sohu\.com/getwebpush_sohuHD\.globalNewPushTrigger\.json"
			to="https://push.my.tv.sohu.com/getwebpush_sohuHD.globalNewPushTrigger.json" />
	<rule from="^http://push\.my\.tv\.sohu\.com/user/a/fa/list\.do"
			to="https://push.my.tv.sohu.com/user/a/fa/list.do" />
		<test url="http://push.my.tv.sohu.com/getwebpush_sohuHD.globalNewPushTrigger.json" />
		<test url="http://push.my.tv.sohu.com/user/a/fa/list.do" />

</ruleset>
