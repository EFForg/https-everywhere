	<!--securecookie host="^www\.bloomberg\.com$" name="^(?:__uzm[abcd]|ak_co|ak_rg)$" /-->

	<securecookie host="^\." name="^optimizely" />
	<securecookie host="^(?:careers|service)\.bloomberg\.com$" name=".+" />


	<rule from="^http:"
		to="https:" />

</ruleset>
