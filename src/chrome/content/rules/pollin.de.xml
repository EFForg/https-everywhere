<ruleset name="pollin.de" platform="mixedcontent">
  <!-- mixed content on https://www.pollin.de/shop/warenkorb.html due to base element-->
  
  <target host="pollin.de" />
  <target host="www.pollin.de" />
  <target host="cdn.pollin.de" />
  
  <!-- cdn subdomain root dir is equivalent to to www.pollin.de/shop/images/ -->
  <!-- but redirects to www subdomain when fetched using HTTPS -->
  <rule from="^http://cdn\.pollin\.de/"
          to="https://www.pollin.de/shop/images/"/>
  
  <rule from="^http:"
          to="https:"/>
</ruleset>
