<!--
	For other Samsung coverage, see Samsung.com.xml.

	Fully covered subdomains:

		- *-odc:

			- au-odc
			- br-odc
			- de-odc
			- es-odc
			- fr-odc
			- hk-odc
			- id-odc
			- in-odc
			- ir-odc
			- it-odc
			- kr-odc
			- my-odc
			- pl-odc
			- ru-odc
			- sa-odc
			- th-odc
			- tr-odc
			- tw-odc
			- uk-odc
			- us-odc

		- mkt-odc
		- tv


	These domains will redirect to new samsung appstore auto by apps.samsung.com/mercury/main/getMain.as :
		- ^samsungapps.com
		- img.samsungapps.com
		- www.samsungapps.com

-->
<ruleset name="Samsung_Apps">

	<target host="samsungapps.com" />
	<target host="img.samsungapps.com" />
	<target host="www.samsungapps.com" />

	<rule from="^http://(img\.|www\.)?samsungapps\.com/"
		to="https://apps.samsung.com/mercury/main/getMain.as" />

	<target host="*.samsungapps.com" />

	<rule from="^http://(\w\w-odc|mkt-odc|tv)\.samsungapps\.com/"
		to="https://$1.samsungapps.com/" />
		<test url="http://us-odc.allshareplay.com/" />
		<test url="http://mkt-odc.allshareplay.com/" />
		<test url="http://tv.allshareplay.com/" />

</ruleset>
