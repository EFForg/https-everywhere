<!--
	Fully covered subdomains:

		- (www.)?
		- blog
		- docs
		- help

-->
<ruleset name="Pushbullet.com">

	<target host="pushbullet.com" />
	<target host="*.pushbullet.com" />


	<securecookie host="^\.pushbullet\.com$" name=".+" />


	<rule from="^http://((?:blog|docs|help|www)\.)?pushbullet\.com/"
		to="https://$1pushbullet.com/" />

</ruleset>
