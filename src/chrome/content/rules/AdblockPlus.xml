<!--
	Fully covered subdomains:

		- (www.)
		- easylist
		- easylist-downloads
		- hg
		- issues
		- notification
		- reports

-->
<ruleset name="AdblockPlus.org">

	<target host="adblockplus.org"/>
	<target host="*.adblockplus.org"/>


	<securecookie host="^(?:.*\.)?adblockplus\.org$" name=".+" />


	<rule from="^http://((?:easylist(?:-downloads)?|hg|issues|notification|reports|www)\.)?adblockplus\.org/"
		to="https://$1adblockplus.org/" />

</ruleset>
