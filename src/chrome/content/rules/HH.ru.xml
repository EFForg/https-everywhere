<!--
	Other HeadHunter rulesets:

		- Career.ru.xml
		- HHid.ru.xml

-->
<ruleset name="HH.ru (partial)">

	<target host="hh.ru" />
		<!--
			Redirects to http:
						-->
		<!--exclusion pattern="^http://(?:www\.)?hh\.ru/($|article/\d+$|auth/employer$)" /-->
		<!--
			Exceptions:
					-->
		<exclusion pattern="^http://(?:www\.)?hh\.ru/+(?!favicon\.ico|icms/)" />
	<target host="*.hh.ru" />


	<rule from="^http://(i\.|www\.)?hh\.ru/"
		to="https://$1hh.ru/" />

</ruleset>
