<!--
	Refused:
		- faq		(→ docs)
		- readme	(→ raw.github.com)
		- wiki		(→ docs)
-->
<ruleset name="MegaGlest.org">
	<target host="megaglest.org" />
	<target host="www.megaglest.org" />
	<target host="docs.megaglest.org" />
	<target host="forum.megaglest.org" />

	<target host="faq.megaglest.org" />
	<target host="readme.megaglest.org" />
	<target host="translate.megaglest.org" />
	<target host="wiki.megaglest.org" />
		<test url="http://wiki.megaglest.org/Translations" />

	<!--	Redirect keeps path and args:
						-->
	<rule from="^http://faq\.megaglest\.org/"
		to="https://docs.megaglest.org/MG/FAQ" />

	<!--	Redirect keeps path and args:
						-->
	<rule from="^http://readme\.megaglest\.org/"
		to="https://raw.github.com/MegaGlest/megaglest-source/master/docs/README.txt" />
	
	<!--	Redirect keeps path and args:
						-->
	<rule from="^http://translate\.megaglest\.org/"
		to="https://docs.megaglest.org/MG/Translations" />
	
	<!--	*No* trailing slash for Wiki homepage:
						-->
	<rule from="^http://wiki\.megaglest\.org/$"
		to="https://docs.megaglest.org/MG" />
	
	<!--	Redirect keeps path and args:
						-->
	<rule from="^http://wiki\.megaglest\.org/"
		to="https://docs.megaglest.org/MG/" />

	<rule from="^http:" to="https:" />
</ruleset>
