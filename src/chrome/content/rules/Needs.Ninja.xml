<!--
	Problematic hosts in *needs.ninja:

		- (www.)? *

	* Server sends no certificate chain, see https://whatsmychaincert.com


	Fully covered hosts in *needs.ninja:

		- (www.)?

-->
<ruleset name="Needs.Ninja" default_off="missing certificate chain">

	<!--	Direct rewrites:
				-->
	<target host="needs.ninja" />
	<target host="www.needs.ninja" />


	<rule from="^http:"
		to="https:" />

</ruleset>
