<ruleset name="Backpackers Lucerne">
    <target host="backpackerslucerne.ch" />
    <target host="www.backpackerslucerne.ch" />

    <securecookie host="^(?:.*\.)?backpackerslucerne\.ch$" name=".+" />

    <rule from="^http://backpackerslucerne\.ch/"
        to="https://www.backpackerslucerne.ch/" />
    <rule from="^http://([^/:@]+)?\.backpackerslucerne\.ch/"
        to="https://$1.backpackerslucerne.ch/" />
</ruleset>
