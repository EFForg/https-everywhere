<!--
	Invalid certificate:
		apps.worldsoffun.com
		autodiscover.worldsoffun.com

	Not found:
		www.reservations.worldsoffun.com

	Timeout:
		jobs.worldsoffun.com
		mobile.worldsoffun.com
		tickets.worldsoffun.com
-->
<ruleset name="Worlds of Fun">

	<target host="worldsoffun.com" />
	<target host="www.worldsoffun.com" />
	<target host="dance.worldsoffun.com" />
	<target host="festival.worldsoffun.com" />
	<target host="lodging.worldsoffun.com" />
	<target host="reservations.worldsoffun.com" />

	<securecookie host=".+" name=".+" />

	<!-- Invalid certificate on https://worldsoffun.com/,
	http://worldsoffun.com/ redirects to http://www.worldsoffun.com/ -->
	<rule from="^http://worldsoffun\.com/"
		to="https://www.worldsoffun.com/" />

	<rule from="^http:" to="https:" />

</ruleset>
