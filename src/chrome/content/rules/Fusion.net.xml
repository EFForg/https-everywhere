<ruleset name="Fusion.net" platform="mixedcontent" >
<target host="fusion.net"/>
<target host="*.fusion.net"/>

<!-- http://cdn.fusion.net/ supports TLS, but the cert is only valid for  *.akamaihd.net, *.akamaihd-staging.net, a248.e.akamai.net  -->
<!-- http://fusion.channelfinder.net/ , cert is only valid for fox.channelfinder.net-->

<rule from="^http://(www\.)?fusion\.net/" to="https://fusion.net/"/>
</ruleset>
