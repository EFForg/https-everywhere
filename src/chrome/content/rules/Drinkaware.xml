<ruleset name="Drinkaware">
    <target host="drinkaware.co.uk" />
    <target host="*.drinkaware.co.uk" />

    <securecookie host="^(?:.*\.)?drinkaware\.co\.uk$" name=".+" />

    <rule from="^http://drinkaware\.co\.uk/"
        to="https://www.drinkaware.co.uk/" />
    <rule from="^http://([^/:@]+)?\.drinkaware\.co\.uk/"
        to="https://$1.drinkaware.co.uk/" />
</ruleset>
