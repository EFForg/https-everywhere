<ruleset name="BGPmon">
    <target host="bgpmon.net" />
    <target host="*.bgpmon.net" />

    <securecookie host="^(.*\.)?bgpmon\.net$" name=".+" />

    <rule from="^https?://bgpmon\.net/"
        to="https://www.bgpmon.net/" />
    <rule from="^http://([^/:@]+)?\.bgpmon\.net/"
        to="https://$1.bgpmon.net/" />
</ruleset>
