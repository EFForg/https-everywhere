<ruleset name="Pandora">
	<target host="pandora.com"/>
	<target host="*.pandora.com"/>
	<target host="*.p-cdn.com"/>
	<test url="http://amp.pandora.com/"/>
	<test url="http://help.pandora.com/"/>
	<test url="http://mediaserver-cont-ch1-1-v4v6.pandora.com/images/public/amz/6/0/8/2/800032806_500W_500H.jpg"/>
	<test url="http://stats.pandora.com/"/>
	<test url="http://submit.pandora.com/"/>
	<securecookie host=".+" name=".+" />
	<rule from="^http://(amp\.|help\.|mediaserver-cont-\w{3}-\d{1}-v4v6\.|stats\.|submit\.)?pandora\.com" to="https://$1pandora.com"/>
	<rule from="http://*.p-cdn.com" to= "https://*.p-cdn.com"/>
 </ruleset>

