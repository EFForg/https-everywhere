<!--
	Other rulesets for xiaomi:
		- Mifile.cn.xml
		- Mipay.com.xml
		- Xiaomi.com.xml
		- Xiaomi.net.xml

	Redirect to http:
		- www.mi.com/$
-->

<ruleset name="Xiaomi.com (partial)">
	<target host="mi.com" />
	<target host="www.mi.com" />
	<exclusion pattern="^http://(www\.)?mi\.com/(index\.html)?$" />
		<test url="http://mi.com/index.html" />
		<test url="http://www.mi.com/index.html" />
	<rule from="^http://(www\.)?mi\.com/" to="https://www.mi.com/" />
		<test url="http://mi.com/minote2/" />
		<test url="http://mi.com/redmi4/" />
		<test url="http://www.mi.com/minote2/" />
		<test url="http://www.mi.com/redmi4/" />

	<target host="hd.mi.com" />
	<target host="item.mi.com" />
		<test url="http://item.mi.com/buyphone/note4/" />
	<target host="static.mi.com" />
		<test url="http://static.mi.com/cart/" />

	<rule from="^http:" to="https:" />
</ruleset>
