<!-- 
	Non-functional hosts:
		Certificate mismatch:
			- microad.net
			- www.microad.net

		Server not found:
			- ori.microad.net
-->
<ruleset name="Microad.net">
	<target host="i.microad.net" />
	<target host="j.microad.net" />
	<target host="jgl.microad.net" />

	<securecookie host="i\.microad\.net$" name=".+" />
	<securecookie host="j\.microad\.net$" name=".+" />
	<securecookie host="jgl\.microad\.net$" name=".+" />

	<rule from="^http:" 
			to="https:" />
</ruleset>
