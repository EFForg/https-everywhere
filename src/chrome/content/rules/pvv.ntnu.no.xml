<ruleset name="Programvareverkstedet">
	<target host="*.pvv.ntnu.no" />
	<target host="*.pvv.org" />

	<test url="http://www.pvv.org/" />
	<test url="http://www.pvv.ntnu.no/" />
	<test url="http://mail.pvv.org/" />
	<test url="http://mail.pvv.ntnu.no/" />
	<test url="http://webmail.pvv.org/" />
	<test url="http://webmail.pvv.ntnu.no/" />
	<test url="http://idp.pvv.org/" />
	<test url="http://idp.pvv.ntnu.no/" />
	<test url="http://list.pvv.org/" />
	<test url="http://list.pvv.ntnu.no/" />

	<rule from="^http://(www|mail|webmail|idp|list)\.pvv\.ntnu\.no/" to="https://$1.pvv.ntnu.no/"/>
	<rule from="^http://(www|mail|webmail|idp|list)\.pvv\.org/" to="https://$1.pvv.ntnu.no/"/>

	<securecookie host="(www|mail|webmail|idp|list)\.pvv\.ntnu\.no$" name=".+" />
</ruleset>
