<ruleset name="LibreOffice">
	<target host="libreoffice.org" />
	<target host="*.libreoffice.org" />

	<securecookie host="^(?:donate|help|www)\.libreoffice\.org$" name=".+" />

	<!-- MCB issue -->
	<exclusion pattern="^http://(extensions|templates)\.libreoffice\.org/" />

		<test url="http://extensions.libreoffice.org/" />
		<test url="http://templates.libreoffice.org/" />

	<rule from="^http:"
		to="https:" />
</ruleset>
