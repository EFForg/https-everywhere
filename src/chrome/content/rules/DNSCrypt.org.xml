<!--
	Nonfunctional subdomains:

		- free.mx	(timeout)
		- recital.mx	(mismatch hostname, CN: libsodium.org)
		- myip		(SSL error)
		- resolver	(SSL error)

-->
<ruleset name="DNSCrypt.org">

	<target host="dnscrypt.org" />
	<target host="www.dnscrypt.org" />
	<target host="forum.dnscrypt.org" />
	<target host="fr.dnscrypt.org" />
	<target host="updates.dnscrypt.org" />

	<securecookie host="^(www\.)?dnscrypt\.org$" name=".+" />

	<rule from="^http:"
		to="https:" />

</ruleset>
