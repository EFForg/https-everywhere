<!--
	Nonfunctional hosts in *.pcgamer.com:

	h: http redirect
	m: certificate mismatch
	r: connection refused
	s: self-signed certificate
	t: timeout on https
-->
<ruleset name="Pcgamer">
	<target host="pcgamer.com" />
	<target host="www.pcgamer.com" />

	<rule from="^http:" to="https:" />
</ruleset>
