<!-- 
	Notes:
	- Assuming that all xx.farnell..com and xx.element14.com domains are configured identically 
	- farnell.com not upgraded as its only a directory site and currently only supports one obsolete cipher
-->

<ruleset name="Element14">

	<target host="*.farnell.com"/>
	<target host="*.element14.com"/>
	<target host="canada.newark.com"/>
	<target host="mexico.newark.com"/>
	<target host="www.newark.com"/>

	<securecookie host="^(?:.*\.)?farnell.com$" name=".*"/>
	<securecookie host="^(?:.*\.)?element14.com$" name=".*"/>
	<securecookie host="^(?:.*\.)?newark.com$" name=".*"/>

	<rule from="^http://([a-z][a-z])\.farnell\.com/" to="https://$1.farnell.com/"/>
	<rule from="^http://([a-z][a-z])\.element14\.com/" to="https://$1.element14.com/"/>
	<rule from="^http://(canada|mexico|www)\.newark\.com/" to="https://$1.newark.com/"/>

	<test url="http://dk.farnell.com/" />
	<test url="http://sg.element14.com/" />

</ruleset>
