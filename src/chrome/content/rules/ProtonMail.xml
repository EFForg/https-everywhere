<ruleset name="ProtonMail">
    <target host="protonmail.ch" />
    <target host="*.protonmail.ch" />
    <target host="protonmail.com" />
    <target host="*.protonmail.com" />

    <test url="http://www.protonmail.ch/" />
    <test url="http://www.protonmail.com/" />
    <test url="http://app.protonmail.ch/" />

    <securecookie host="^(?:.+)?(?:\.)?protonmail\.(?:com|ch)$" name=".+" />

    <rule from="^http:"
            to="https:" />
</ruleset>
