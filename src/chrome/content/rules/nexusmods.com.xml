<!--
	Mixed content:
	- wiki
-->

<ruleset name="NexusMods.com">
	<target host="nexusmods.com" />
	<target host="*.nexusmods.com" />

	<!-- Test URLs -->
	<test url="http://nexusmods.com/" />
	<test url="http://www.nexusmods.com/" />
	<test url="http://forums.nexusmods.com/" />
	<test url="http://filedelivery.nexusmods.com/" />
	<test url="http://staticdelivery.nexusmods.com/" />

	<!-- The wiki currently requires HTTP (see: https://github.com/Nexus-Mods/web-issues/issues/334 ) -->
	<exclusion pattern="^http://wiki.nexusmods.com" />
	<test url="http://wiki.nexusmods.com/" />

	<securecookie host=".+" name=".+" />

	<rule from="^http:" to="https:" />
</ruleset>
