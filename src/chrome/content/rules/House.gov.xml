<!--
	Different content http/https:
		clerk.house.gov

	Time out:
		docs.house.gov

	Invalid certificate:
		kids.clerk.house.gov
		history.house.gov

	Each congress elected gets their own subdomain.

-->
<ruleset name="House.gov">

	<target host="house.gov" />
	<target host="*.house.gov" />

		<!-- Generic subdomains -->
		<test url="http://www.house.gov/" />
		<test url="http://agriculture.house.gov/" />
		<test url="http://democrats-intelligence.house.gov/" />
		<test url="http://intelligence.house.gov/" />
		<test url="http://democrats.intelligence.house.gov/" />
		<test url="http://m.house.gov/" />
		<test url="http://search.house.gov/" />
		<test url="http://ziplook.house.gov/htbin/findrep" />
	
		<!-- Elected representative subdomains -->
		<test url="http://abraham.house.gov/" />
		<test url="http://babin.house.gov/" />
		<test url="http://cardenas.house.gov/" />
		<test url="http://davidson.house.gov/" />
		<test url="http://ellison.house.gov/" />
	
		<exclusion pattern="^http://((kids\.)?clerk|docs|history)\.house\.gov/" />
			<test url="http://clerk.house.gov/" />
			<test url="http://kids.clerk.house.gov/" />
			<test url="http://docs.house.gov/" />
			<test url="http://history.house.gov/" />

	<securecookie host=".+" name=".+" />

	<rule from="^http://democrats\.intelligence\.house\.gov/"
		to="https://democrats-intelligence.house.gov/" />

	<rule from="^http:"
		to="https:" />

</ruleset>
