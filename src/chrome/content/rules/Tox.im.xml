<!--
	Nonfunctional subdomains:

		- dev *
		- wiki *

	* Redirects to ^tox.im; mismatched, CN: www.ipwnage.com

-->
<ruleset name="Tox.im">

	<target host="tox.im" />
	<target host="*.tox.im" />
	<target host="libtoxcore.so"/>
	<target host="*.libtoxcore.so"/>

	<rule from="^http://blog\.libtoxcore\.so/" to="https://blog.libtoxcore.so/"/>
	<rule from="^http://(www\.)?libtoxcore\.so/" to="https://libtoxcore.so/"/>

    <rule from="^http://([^/:@]+\.)?tox\.im/"
		to="https://$1tox.im/" />

</ruleset>
