	<target host="m.nydailynews.com" />
	<target host="static1.nydailynews.com" />
	<target host="static2.nydailynews.com" />
	<target host="static3.nydailynews.com" />
	<target host="webport.nydailynews.com" />
	<target host="webport1.nydailynews.com" />

	<securecookie host="^[^@:/]*\.nydailynews\.com$" name=".+" />

	<rule from="^http://static\d\.nydailynews\.com/"
		to="https://www.nydailynews.com/" />

	<rule from="^http://classifieds\.nydailynews\.com/resource/"
		to="https://casmp.adperfect.com/resource/" />

	<rule from="^http:" to="https:" />

