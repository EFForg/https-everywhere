<!--
	Nonfunctional hosts in *.blender.io:
		mail.blender.io (r)

	h: http redirect
	m: certificate mismatch
	r: connection refused
	s: self-signed certificate
	t: timeout on https
-->
<ruleset name="Blender.io">
	<target host="blender.io" />
	<target host="www.blender.io" />

	<rule from="^http:" to="https:" />
</ruleset>
