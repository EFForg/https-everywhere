<!--
	For rules not causing mixed content, see Sina.xml.

-->
<ruleset name="Sina.com.cn (mixed content)" platform="mixedcontent">

	<!--	Direct rewrites:
				-->
	<target host="app.sina.com.cn" />
	<target host="api.t.sina.com.cn" />
	<target host="weather.sina.com.cn" />


	<securecookie host="^(?:api\.t|weather)\.sina\.com\.cn$" name=".+" />


	<rule from="^http:"
		to="https:" />

</ruleset>
