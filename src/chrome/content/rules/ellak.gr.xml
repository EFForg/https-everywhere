<ruleset name="ellak.gr">
  <target host="ellak.gr" />
  <target host="gfoss.eu" />
  <target host="*.ellak.gr" />

  <securecookie host="^(?:(www|advisory|creativecommons|dms|donate|edu|ellak|gfoss|legal|mathe|mycontent|obs|odi|oer|openbusiness|opendata|opendesign|opengov|openhardware|opensource|openstandards|openwifi|planet|privacy|publicfiscal|smartcities)\.)?ellak\.gr$" name=".*"/>
  <securecookie host="^(?:www\.)?gfoss\.eu$" name=".*"/>

  <rule from="^http://((www|advisory|creativecommons|dms|donate|edu|ellak|gfoss|legal|mathe|mycontent|obs|odi|oer|openbusiness|opendata|opendesign|opengov|openhardware|opensource|openstandards|openwifi|planet|privacy|publicficscal|smartcities)\.)?ellak\.gr/" to="https://$1ellak.gr/"/>
  <rule from="^http://(?:www\.)?gfoss\.eu/" to="https://gfoss.eu/"/>
</ruleset>
