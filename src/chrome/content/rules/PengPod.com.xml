<!--
	(www.)?: Refused

-->
<ruleset name="PengPod.com" default_off="connection refused">

	<target host="pengpod.com" />
	<target host="*.pengpod.com" />


	<securecookie host="^(?:.*\.)?pengpod\.com$" name=".+" />


	<rule from="^http://(www\.)?pengpod\.com/"
		to="https://$1pengpod.com/" />

</ruleset>
