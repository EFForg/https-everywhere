<!--	?functional:
		- runtime.widgetbox.com		(EdgeCast CDN)
-->
<ruleset name="Widgetbox.com">

	<target host="widgetbox.com" />
	<target host="www.widgetbox.com" />
	<target host="widgetserver.com" />
	<target host="p.widgetserver.com" />
	<target host="www.widgetserver.com" />

	<securecookie host="^widgetbox\.com$" name=".*"/>

	<rule from="^http://(www\.)?widgetbox\.com/"
		to="https://widgetbox.com/" />

	<rule from="^http://(www\.)?(p\.)?widgetserver\.com/"
		to="https://$2widgetserver.com/" />

</ruleset>
