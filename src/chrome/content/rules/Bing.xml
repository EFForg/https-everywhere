<!--
	For other Microsoft coverage, see Microsoft.xml.


	CDN buckets:

		- a134.lm.akamai.net

			- akam.bing.com
			- *.mm.bing.net


	Nonfunctional domains:

		- m2.cn.bing.com
		- origin.bj1.bing.com
		- blogs.bing.com


	Fully covered domains:

		- bing.com subdomains:

			- (www.)
			- c.bing		(tracking beacons)
			- cn.bing
			- h.bing
			- ssl
			- testfamilysafety.bing
			- udc.bing
			- (www.)bing

		- *.mm.bing.net

-->
<ruleset name="Bing">

	<target host=                 "bing.com" />
 	<target host=               "c.bing.com" />
	<target host=              "cn.bing.com" />
	<target host=               "h.bing.com" />
	<target host=             "ssl.bing.com" />
	<target host="testfamilysafety.bing.com" />
	<target host=             "udc.bing.com" />
	<target host=             "www.bing.com" />
	<target host=          "ts0.mm.bing.net" />
	<target host=          "ts1.mm.bing.net" />
	<target host=          "ts2.mm.bing.net" />
	<target host=          "ts3.mm.bing.net" />
	<target host=          "ts4.mm.bing.net" />
	<target host=          "ts5.mm.bing.net" />
	<target host=          "ts6.mm.bing.net" />
	<target host=          "ts7.mm.bing.net" />
	<target host=          "ts8.mm.bing.net" />
	<target host=          "ts9.mm.bing.net" />
	<target host=         "tse1.mm.bing.net" />
	<target host=         "tse2.mm.bing.net" />
	<target host=         "tse3.mm.bing.net" />
	<target host=         "tse4.mm.bing.net" />

	<securecookie host=".*\.bing\.com$" name=".+" />

	<rule from="^http://ts[0-9]\.mm\.bing\.net/"
		to="https://www.bing.com/" />
	<rule from="^http:"
		to="https:" />
</ruleset>
