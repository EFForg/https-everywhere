<!--
	Connection refused:
		- demodownload.image-line.com

	Invalid certificate:
		- maillink.image-line.com

	Redirect from HTTPS to HTTP:
		- forum.image-line.com

	Redirect to a wrong page:
		- boxregistration.image-line.com
-->

<ruleset name="Image-Line">
	<target host="image-line.com" />
	<target host="www.image-line.com" />
	<target host="boxregistration.image-line.com" />
	<target host="maillink.image-line.com" />
	<target host="miro.image-line.com" />
	<target host="nikolay.image-line.com" />
	<target host="support.image-line.com" />
	<target host="videotutorials.image-line.com" />

	<securecookie host=".+" name=".+" />

	<rule from="^https?://boxregistration\.image-line\.com/" to="https://support.image-line.com/member/license_login.php" />
	<rule from="^https?://maillink\.image-line\.com/" to="https://ase.emv3.com/" />
	<rule from="^http:" to="https:" />
</ruleset>
