<!--
January 31st, 2016 rule rewrite:

- Frontpage at https://www.marktplaats.nl/ downgrades to http, hence the exclusion rule
- help.marktplaats.nl doesn't support https
- www.dekrachtvanmarktplaats.nl doesn't support https
- Removed platform="mixedcontent"

-->

<ruleset name="Marktplaats">
	
	<target host="marktplaats.nl" />
	<target host="www.marktplaats.nl" /> <!-- Base URL downgrades to http -->
	<target host="api.marktplaats.nl" />
	<target host="m.marktplaats.nl" />
	<target host="admarkt.marktplaats.nl" />
	<target host="klussen.marktplaats.nl" /> <!-- Base URL downgrades to http -->
	<target host="diensten-vakmensen.marktplaats.nl" />
	<target host="aanbieding.marktplaats.nl" />
	<target host="mktg.marktplaats.nl" />
	<target host="nieuweauto.marktplaats.nl" />

	<target host="marktplaatszakelijk.nl" /> <!-- Requires SNI -->	
	<target host="www.marktplaatszakelijk.nl" />
	
	<target host="i.marktplaats.com" />
	<target host="s.marktplaats.com" />
	<target host="aanbieding.marktplaats.com" />
	
	<target host="p.marktplaats.net" />

	<securecookie host="^(?:.*\.)?marktplaats.nl$" name=".*"/>
	<securecookie host="^(?:.*\.)?marktplaatszakelijk.nl$" name=".*"/>

	<test url="http://klussen.marktplaats.nl/diensten-en-vakmensen/klussen/0" />
	<test url="http://diensten-vakmensen.marktplaats.nl/" />
	<test url="http://aanbieding.marktplaats.nl/" />
	<test url="http://admarkt.marktplaats.nl/" />
	<test url="http://www.marktplaats.nl/c/auto-s/c91.html" />
	<test url="http://s.marktplaats.com/aurora/res/images/logos/marktplaats-logo.png" />
	<test url="http://p.marktplaats.net/aurora/res/js/gp/mid.js" />
  
	<exclusion pattern="^http://www.marktplaats\.nl " />
	<exclusion pattern="^http://klussen.marktplaats\.nl " />
	<exclusion pattern="^http://www.marktplaats\.nl/kijkinuwwijk\.html" />

	<rule from="^http://marktplaats\.nl/." to="http://www.marktplaats.nl/"/>	
	<rule from="^http://(www|klussen|nieuweauto).marktplaats\.nl/(.)" to="https://$1.marktplaats.nl/$2"/>
	<rule from="^http://(api|m|admarkt|diensten-vakmensen|aanbieding|mktg).marktplaats\.nl/" to="https://$1.marktplaats.nl/"/>
	<rule from="^http://(i|s|aanbieding).marktplaats\.com/" to="https://$1.marktplaats.com/"/>
	<rule from="^http://p.marktplaats\.net/" to="https://p.marktplaats.net/"/>
	<rule from="^https://www\.marktplaats\.nl/a/([^?]*)\.html.*" to="https://www.marktplaats.nl/a/$1.html"/> <!-- Rewrites to cleaner advert URLs -->
	<rule from="^https://www\.marktplaats\.nl/kijkinuwwijk\.html" to="http://www.marktplaats.nl/kijkinuwwijk.html" downgrade="1" />
	<rule from="^http://marktplaatszakelijk\.nl/" to="https://www.marktplaatszakelijk.nl/"/>
	<rule from="^http://www\.marktplaatszakelijk\.nl/" to="https://www.marktplaatszakelijk.nl/"/>

</ruleset>
