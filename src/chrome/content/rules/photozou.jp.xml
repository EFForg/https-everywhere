<!--

	Nonfunctional subdomains:

		- info *
		- kura(\d+) (Images are replaced with placeholder)

	* invalid

-->

<ruleset name="Photozou">

	<target host="*.photozou.jp" />

	<securecookie host=".+" name=".+" />

	<exclusion pattern="^http://art\d+\.photozou\.jp/$" />
		<test url="http://art1.photozou.jp/" />
		<test url="http://art64.photozou.jp/" />

	<test url="http://art1.photozou.jp/style/pc.top.css" />
	<test url="http://art64.photozou.jp/style/module/basic.css" />
	<test url="http://m.photozou.jp/" />

	<rule from="^http://(art\d+|m)\.photozou\.jp/"
		to="https://$1.photozou.jp/" />

</ruleset>
