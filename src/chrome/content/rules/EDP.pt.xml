<ruleset name="Edp.pt">
	<target host="www.edpessoa.internet.edp.pt" />
	<rule from="^http://edp\.pt/"
	to="https://www.edp.pt/" />
	<test url="http://edp.pt" />
	<test url="http://www.edp.pt/en/Pages/homepage.aspx" />
	<test url="http://www.edp.pt/pt/Pages/homepage.aspx" />
	<rule from="^http://www\.edp\.pt/([\w-]+)/Pages/homepage.aspx"
	to="https://www.edp.pt/$1/Pages/homepage.aspx" />
	
	<rule from="^http:" to="https:" />
</ruleset>
