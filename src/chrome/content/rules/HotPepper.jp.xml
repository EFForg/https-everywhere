<ruleset name="HotPepper.jp">

	<target host="beauty.hotpepper.jp" />
	<target host="help.hotpepper.jp" />
	<target host="hotpepper.jp" />
	<target host="monitor.hotpepper.jp" />
	<target host="www.hotpepper.jp" />

	<rule from="^http:"
		to="https:" />

</ruleset>
