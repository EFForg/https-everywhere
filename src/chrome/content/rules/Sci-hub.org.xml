<!--
sci-hub.org itself does not work anymore, this ruleset is for its mirrors

Mirrors of the documents live on their own subdomain where https is refused. Examples:
scholar.google.com.sci-hub.cc refused
onlinelibrary.wiley.com.sci-hub.cc refused
-->
<ruleset name="Sci-hub.org">
	<!-- CloudFlare HTTPS mirrors -->
	<target host="sci-hub.io" />
	<target host="sci-hub.ac" />
	<target host="sci-hub.la" />

	<!-- Mirrors without HTTPS -->
	<target host="www.sci-hub.io" />
	<target host="sci-hub.cc" />
	<target host="www.sci-hub.cc" />
	<target host="sci-hub.bz" />
	<target host="www.sci-hub.bz" />

	<!-- Moscow is 403 Forbidden for now, redirect to https://sci-hub.io -->
	<target host="moscow.sci-hub.io" />
	<target host="moscow.sci-hub.ac" />
	<target host="moscow.sci-hub.la" />
	<target host="moscow.sci-hub.bz" />

	<!-- Mirror domains with HTTPS, they fall under generic rule -->
	<target host="ocean.sci-hub.bz" />
	<target host="cyber.sci-hub.bz" />

	<!-- Redirect www to nowww for domains where www does not exist. -->
	<rule from="^http://www\.sci-hub\.io/"
		to="https://sci-hub.io/" />

	<!-- Redirect mirrors without HTTPS to HTTPS mirror. -->
	<rule from="^http://www\.sci-hub\.io/"
		to="https://sci-hub.io/" />
	<rule from="^http://sci-hub\.cc/"
		to="https://sci-hub.io/" />
	<rule from="^http://www\.sci-hub\.cc/"
		to="https://sci-hub.io/" />
	<rule from="^http://sci-hub\.bz/"
		to="https://sci-hub.io/" />
	<rule from="^http://www\.sci-hub\.bz/"
		to="https://sci-hub.io/" />

	<!-- Redirect moscow to sci-hub.io -->
	<rule from="^http://moscow\.sci-hub\.io/"
		to="https://sci-hub.io/" />
	<rule from="^http://moscow\.sci-hub\.ac/"
		to="https://sci-hub.io/" />
	<rule from="^http://moscow\.sci-hub\.la/"
		to="https://sci-hub.io/" />
	<rule from="^http://moscow\.sci-hub\.bz/"
		to="https://sci-hub.io/" />

	<rule from="^http:" to="https:" />
</ruleset>
