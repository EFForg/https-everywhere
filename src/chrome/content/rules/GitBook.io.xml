<!--
	For other GitBook IO coverage, see GitBook.com.xml.


	Problematic subdomains:

		- ^ *
		- help ¹
		- push ³
		- status ²
		- www ³

	* Refused
	¹ Works; mismatched, CN: www.gitbook.io
	³ Mismatched
	² statuspage.io

-->
<ruleset name="GitBook.IO (partial)">

	<!--	Special cases:
				-->
	<target host="gitbook.io" />
	<target host="www.gitbook.io" />
	<target host="status.gitbook.io" />

	<!--	Redirect keeps path, args,
		and forward slash:
					-->

	<rule from="^https?://(www\.)?gitbook\.io/"
		to="https://www.gitbook.com/" />

	<!-- Get test in https://taizilongxu.gitbooks.io/stackoverflow-about-python/content/index.html
	The 'book passing' image will be broken if 	<rule from="^http://(www\.)?gitbook\.io/" to="https://www.gitbook.com/" />
		-->
	<test url="https://www.gitbook.io/button/status/book/taizilongxu/stackoverflow-about-python" />
	<test url="http://www.gitbook.io/button/status/book/taizilongxu/stackoverflow-about-python" />
	
	<rule from="^http://status\.gitbook\.io/"
		to="https://www.statuspage.io/" />

</ruleset>
