<ruleset name="Fused">

	<target host="fused.com" />
	<target host="clients.fused.com" />
	<target host="support.fused.com" />
	<target host="www.fused.com" />

	<!--	Not secured by server:
					-->
	<!--securecookie host="^clients\.fused\.com$" name="^WHMCS\w+$" /-->

	<securecookie host="^(?:clients|support)\.fused\.com$" name=".+" />


	<rule from="^http://((?:clients|support|www)\.)?fused\.com/"
		to="https://$1fused.com/" />

</ruleset>
