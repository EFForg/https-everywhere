<!--
	CN: *.hostmonster.com

-->
<ruleset name="Postlapsaria (partial)">

	<target host="postlapsaria.com" />
	<target host="www.postlapsaria.com" />
		<!--
			Presumably, making hostmonster's domain visible wouldn't be appreciated:
												-->
		<exclusion pattern="^http://(?:www\.)?postlapsaria\.com/(?!favicon\.ico|images/|~postlapsaria/|~sponsors/|style\.css|supersized/)" />


	<rule from="^http://(?:www\.)?postlapsaria\.com/"
		to="https://secure.hostmonster.com/~postlaps/" />

</ruleset>
