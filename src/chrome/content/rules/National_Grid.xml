<ruleset name="National Grid">
    <target host="nationalgrid.com" />
    <target host="*.nationalgrid.com" />

    <rule from="^http://nationalgrid\.com/"
        to="https://www.nationalgrid.com/"/>
    <rule from="^http://([^/:@]+)?\.nationalgrid\.com/"
        to="https://$1.nationalgrid.com/" />
</ruleset>
