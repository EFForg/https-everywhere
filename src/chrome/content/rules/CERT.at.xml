<ruleset name="CERT.at">
    <target host="cert.at" />
    <target host="*.cert.at" />

    <securecookie host="^(?:.*\.)?cert\.at$" name=".+" />

    <rule from="^http://cert\.at/"
        to="https://www.cert.at/" />
    <rule from="^http://([^/:@]+)?\.cert\.at/"
        to="https://$1.cert.at/" />
</ruleset>
