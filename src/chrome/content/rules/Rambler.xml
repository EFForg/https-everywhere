<ruleset name="Rambler (partial)">

	<target host="*.rambler.ru" />
		<!--
			Redirect to http:
						-->
		<exclusion pattern="^http://kassa\.rambler\.ru/(?:cinemapartnership|concerts|partners|refund|sport|theatre|unsubscribe)?(?:$|\?)" />
		<exclusion pattern="^http://www\." />


	<!--	Not secured by server:
					-->
	<!--securecookie host="^\.rambler\.ru$" name="^(ruid|top100rb)$" /-->
	<!--securecookie host="^id\.rambler\.ru$" name="^request\.key$" /-->

	<securecookie host="^(?:id)?\.rambler\.ru$" name=".*" />


	<!--	s?counter is another of those 1px tracking services.	-->

	<rule from="^http://(assist|cnt|s?counter|id?|images|kassa|m\.kassa|mail|mail-pda|soft|sync|update)\.rambler\.ru/"
		to="https://$1.rambler.ru/" />

</ruleset>
