<!--
    Cloudflare SSL

    - Mixed content:
	    - mydealz.de
		    - images *
	
	* Secured by us
    
    - Nonfunctional subdomains:
        - visit.hukd    -> domain mismatch
        - gutscheine    -> domain mismatch, different site
        - links         -> domain mismatch, different site
        - live          -> domain mismatch, different site
-->
<ruleset name="MyDealz.de" default_off="display and functionality issues">
    <target host="mydealz.de" />
    <target host="www.mydealz.de" />
    <target host="hukd.mydealz.de" />

    <securecookie host="^(www\.|hukd\.)?mydealz\.de/$" name=".+" />

    <rule from="^http:"
            to="https:" />
</ruleset>
