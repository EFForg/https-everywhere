<!--
    DE-CIX German Internet Exchange

    Nonfunctional subdomains:
      - lg.de-cix.net
-->

<ruleset name="DE-CIX">
    <target host="de-cix.net" />
    <target host="*.de-cix.net" />

    <exclusion pattern="^http://lg\.de-cix\.net" />

    <rule from="^http://de-cix\.net/"
        to="https://www.de-cix.net/" />
    <rule from="^http://([^/:@]+)?\.de-cix\.net/"
        to="https://$1.de-cix.net/" />
</ruleset>
