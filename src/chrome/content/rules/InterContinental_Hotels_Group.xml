<ruleset name="InterContinental Hotels Group">

	<target host="ihg.com" />
	<target host="*.ihg.com" />
		<exclusion pattern="^http://(?:contact|qa\.contact|development)\.ihg\.com/" />
	<target host="ihgagent.com" />
	<target host="www.ihgagent.com" />


	<!--	Not secured by server:
