<!--
	Other Pivotal rulesets:

		- Cloud_Foundry.xml
		- Pivotaltracker.xml
		- RabbitMQ.xml
		- Spring.io.xml

-->
<ruleset name="Pivotal.io">

	<target host="pivotal.io" />
	<target host="console.run.pivotal.io" />
	<target host="login.run.pivotal.io" />


	<securecookie host="^(?:console|login)\.run\.pivotal\.io$" name=".+" />


	<rule from="^http:"
		to="https:" />

</ruleset>
