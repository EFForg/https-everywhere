<!--
	Nonfunctional domains:

		- partner.sirrix.com *
		- registry.sirrix.com *
		- support.sirrix.com *

	* Uses unpredictable redirect uri to sirrix.de, shows www


	Problematic domains:

		- sirrix.de		(mismatched, CN: www.sirrix.com)

-->
<ruleset name="Sirrix (partial)">

	<target host="sirrix.com" />
	<target host="www.sirrix.com" />
	<target host="sirrix.de" />
	<target host="www.sirrix.de" />


	<securecookie host="^\w" name="." />


	<rule from="^http://sirrix\.de/"
		to="https://www.sirrix.de/" />

	<rule from="^http:"
		to="https:" />

</ruleset>
