<ruleset name="Fazekas Gimnazium">
	<!-- Official website -->
	<target host="fazekas.hu" />
	<target host="www.fazekas.hu" />

	<!-- Content delivery network -->
	<target host="cdn.fazekas.hu" />

	<!-- Mailing and user management -->
	<target host="levelezes.fazekas.hu" />	
	<target host="vezerlopult.fazekas.hu" />	

	<!-- School administration system -->
	<target host="sas.fazekas.hu" />
	<target host="sas-teszt.fazekas.hu" />

	<!-- Back-end servers -->
	<target host="*.server.fazekas.hu" />
	<target host="*.szerver.fazekas.hu" />
	
	<test url="http://alfa.server.fazekas.hu/" />
	<test url="http://foxtrot.server.fazekas.hu/" />
	<test url="http://alfa.szerver.fazekas.hu/" />
	<test url="http://foxtrot.szerver.fazekas.hu/" />

	<!-- Users websites -->
	<target host="*.f.fazekas.hu" />
	<target host="*.felhasznalo.fazekas.hu" />
	<!-- <target host="*.web.fazekas.hu"> to be fixed -->
	
	<test url="http://zsolt94.f.fazekas.hu/" />
	<test url="http://roli95.f.fazekas.hu/" />
	<test url="http://zsolt94.felhasznalo.fazekas.hu/" />
	<test url="http://roli95.felhasznalo.fazekas.hu/" />
	<!--- <test url="http://zsolt94.web.fazekas.hu" />
	<test url="http://roli95.web.fazekas.hu" /> -->


	<rule from="^http:"
	      to="https:" />
</ruleset>
