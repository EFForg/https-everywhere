<ruleset name="Mollom">

	<target host="mollom.com" />
	<target host="*.mollom.com" />


	<securecookie host="^\.mollom\.com$" name=".+" />


	<!--	xmlrpc2: Included on 3rd-party
		websites for captchas.	-->
	<rule from="^http://((?:wdc-api04|wdc-cmp01|www|xmlrpc2)\.)?mollom\.com/"
		to="https://$1mollom.com/" />

</ruleset>
