<!--
	Problematic hosts:
		mts.rs: 404 on https, valid cert
		telekom.rs: 404 on https, invalid cert
		www.telekom.rs: 404 on https, valid cert
-->
<ruleset name="MTS.rs">

	<!--	Direct rewrites:
				-->
	<target host="www.mts.rs" />
	<target host="disk.mts.rs" />
	<target host="kliksport.mts.rs" />
	<target host="mail.mts.rs" />
	<target host="static.mts.rs" />
	<target host="blog.telekom.rs" />
	<target host="mail.telekom.rs" />
	<target host="mojracun.telekom.rs" />
	<target host="mtstv.telekom.rs" />
	<target host="racun.telekom.rs" />
	<target host="mtsantenatv.rs" />
	<target host="www.mtsantenatv.rs" />
	<target host="mtsblog.rs" />
	<target host="www.mtsblog.rs" />

	<!--	Complications:
				-->
	<target host="mts.rs" />
	<target host="telekom.rs" />
	<target host="www.telekom.rs" />

	<rule from="^http://mts\.rs/" to="https://www.mts.rs/" />

	<rule from="^http://(?:www\.)?telekom\.rs/" to="https://www.mts.rs/" />

	<rule from="^http:" to="https:" />

</ruleset>
