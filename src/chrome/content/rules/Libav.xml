<ruleset name="libav">

	<target host="libav.org" />
	<target host="*.libav.org" />


	<securecookie host="^.*\.libav\.org$" name=".*" />


	<!--	Observed subdomains:

		- bugzilla
		- fate
		- git
		- samples
		- www
			-->
	<rule from="^http://((?:bugzilla|fate|git|samples|www)\.)?libav\.org/"
		to="https://$1libav.org/" />

</ruleset>
