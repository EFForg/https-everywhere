<ruleset name="Westdeutscher Rundfunk">
<target host="*.wdr.de"/>
<target host="*.einslive.de"/>
<target host="*.wdr2.de"/>
<target host="*.wdr3.de"/>
<!-- WDR4 has technical issues with TLS-->
<target host="*.wdr5.de"/>
<target host="*.funkhauseuropa.de"/>
<target host="*.kiraka.de"/>
<target host="*.sportschau.de"/>

<rule from="^http://(www|www1)\.wdr\.de/" to="https://$1.wdr.de/"/>
<rule from="^http://www\.einslive\.de/" to="https://www.einslive.de/"/>
<rule from="^http://www\.wdr2\.de/" to="https://www.wdr2.de/"/>
<rule from="^http://www\.wdr3\.de/" to="https://www.wdr3.de/"/>
<rule from="^http://www\.wdr5\.de/" to="https://www.wdr5.de/"/>
<rule from="^http://www\.funkhauseuropa\.de/" to="https://www.funkhauseuropa.de/"/>
<rule from="^http://www\.kiraka\.de/" to="https://www.kiraka.de/"/>
<rule from="^http://www\.sportschau\.de/" to="https://www.sportschau.de/"/>

<test url="http://www.wdr.de/" />
<test url="http://www1.wdr.de/" />
<test url="http://www.einslive.de/" />
<test url="http://www.wdr2.de/" />
<test url="http://www.wdr3.de/" />
<test url="http://www.wdr5.de/" />
<test url="http://www.funkhauseuropa.de/" />
<test url="http://www.kiraka.de/" />
<test url="http://www.sportschau.de/" />

</ruleset>
 
