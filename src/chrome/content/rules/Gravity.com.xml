<!--
	Releated rulesets: GrvCDN.com.xml

	Invalid certificate:
		api.gravity.com
		blog.gravity.com
		rma-api.gravity.com	https://rma-api.gravity.com/v1/api/intelligence/wl
		status.gravity.com

	MCB:
		^
		www.gravity.com
-->
<ruleset name="Gravity.com">
	<!--	Direct rewrites:	-->
	<target host="analytics.gravity.com" />
	<target host="dashboard.gravity.com" />
	<target host="me.gravity.com" />
	<target host="support.gravity.com" />

	<!--	MCB:	-->
	<target host="gravity.com" />
	<target host="www.gravity.com" />

	<exclusion pattern="http://(www\.)?gravity\.com/(?!wp-content/|wp-includes/)" />
		<test url="http://gravity.com/wp-content/themes/orbit/style.css" />
		<test url="http://gravity.com/wp-includes/js/jquery/jquery.js" />
		<test url="http://www.gravity.com/wp-content/themes/orbit/style.css" />
		<test url="http://www.gravity.com/wp-includes/js/jquery/jquery.js" />

		<test url="http://gravity.com/#publishers" />
		<test url="http://gravity.com/blog/" />
		<test url="http://gravity.com/company/" />
		<test url="http://gravity.com/get-personalization-for-your-site/" />
		<test url="http://gravity.com/technology/" />
		<test url="http://www.gravity.com/#publishers" />
		<test url="http://www.gravity.com/blog/" />
		<test url="http://www.gravity.com/company/" />
		<test url="http://www.gravity.com/get-personalization-for-your-site/" />
		<test url="http://www.gravity.com/technology/" />

	<securecookie host="." name="." />

	<rule from="^http:" to="https:" />
</ruleset>
