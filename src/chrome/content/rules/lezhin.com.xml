<ruleset name="lezhin.com">
	<!--
	Certificate error:
	social.lezhin.com
	help.lezhin.com
	ncdn.lezhin.com
	cdn.lezhin.com

	Refused by HTTP 404:
	desk.lezhin.com
	link.lezhin.com
	-->
	
	<target host="lezhin.com" />
	<target host="www.lezhin.com" />
	<target host="m.lezhin.com" />

	<!-- https://lezhin.com gets refused -->
	<rule from="^http://lezhin\.com/" to="https://www.lezhin.com/" />
	<rule from="^http:" to="https:" />
</ruleset>
