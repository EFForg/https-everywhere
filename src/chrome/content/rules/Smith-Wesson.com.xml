<!--
	Smith-Wesson.com has both a wildcard DNS record and a wildcard certificate.

	Mismatched:
		- ir (CN:a248.e.akamai.net)

	Self-signed:
		- search
		- video
-->

<ruleset name="Smith-Wesson.com">
	<target host="smith-wesson.com" />
	<target host="www.smith-wesson.com" />
	<target host="academy.smith-wesson.com" />
	<target host="champions.smith-wesson.com" />
	<target host="customersupport.smith-wesson.com" />
	<target host="engraving.smith-wesson.com" />
	<target host="firearms.smith-wesson.com" />
	<target host="home.smith-wesson.com" />
	<target host="matches.smith-wesson.com" />
	<target host="specialtyservices.smith-wesson.com" />
	<target host="store.smith-wesson.com" />

	<securecookie host=".+" name=".+" />

	<rule from="^http:" to="https:" />
</ruleset>
