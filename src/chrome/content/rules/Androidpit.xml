<ruleset name="Androidpit" platform="mixedcontent" >

<target host="*.androidpit.com"/>
<target host="*.androidpit.com.br"/>
<target host="*.androidpit.com.tr"/>
<target host="*.androidpit.de"/>
<target host="*.androidpit.es"/>
<target host="*.androidpit.fr"/>
<target host="*.androidpit.it"/>
<target host="*.androidpit.ru"/>

<target host="*.androidpit.info/"/>


<exclusion pattern="^http://www\.androidpit\.com/en/android/forum"/>
<exclusion pattern="^http://www\.androidpit\.com\.br/pt/android/forum"/>
<exclusion pattern="^http://www\.androidpit\.com\.tr/tr/android/forum"/>
<exclusion pattern="^http://www\.androidpit\.de/de/android/forum"/>
<exclusion pattern="^http://www\.androidpit\.es/es/android/foro"/>
<exclusion pattern="^http://www\.androidpit\.fr/fr/android/forum"/>
<exclusion pattern="^http://www\.androidpit\.it/it/android/forum"/>
<exclusion pattern="^http://www\.androidpit\.ru/ru/android/forum"/>

<rule from="^http://www\.androidpit\.com/" to="https://www.androidpit.com/"/>
<rule from="^http://www\.androidpit\.com\.br/" to="https://www.androidpit.com.br/"/>
<rule from="^http://www\.androidpit\.com\.tr/" to="https://www.androidpit.com.tr/"/>
<rule from="^http://www\.androidpit\.(de|es|fr|it|ru)/" to="https://www.androidpit.$1/"/>

<rule from="^http://(fs01|fs02\.androidpit\.info/" to="https://$1.androidpit.info/"/>
<!-- fs03.androidpit.info cert doesn't match the domain -->

<rule from="^http://(st01|st02|st03|st04)\.androidpit\.info/" to="https://$1.androidpit.info/"/>

</ruleset>
