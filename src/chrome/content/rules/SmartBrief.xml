<ruleset name="SmartBrief">

	<target host="smartbrief.com" />
	<target host="*.smartbrief.com" />


	<!--	Observed cookie domains:

			- $
			- jobs
			- www
				-->
	<securecookie host="^(?:.*\.)?smartbrief\.com$" name=".*" />


	<rule from="^http://(jobs\.|www\.)?smartbrief\.com/"
		to="https://$1smartbrief.com/" />

</ruleset>
