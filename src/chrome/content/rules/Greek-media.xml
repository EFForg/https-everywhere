<ruleset name="Greek-media">
  <target host="antenna.gr" />
  <target host="*.antenna.gr" />

	<securecookie host="^(?:.*\.)?antenna\.gr$" name=".*"/>

  <rule from="^http://(\w+\.)?antenna\.gr/" to="https://$1antenna.gr/"/>
</ruleset>
