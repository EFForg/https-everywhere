<!--
	Mixed content domains:

		- www.hak5.org

	Fully covered domains:

		- forums.hak5.org subdomains:

			- forums

-->
<ruleset name="hak5">

	<target host="hak5.org" />
	<target host="*.hak5.org" />
	<target host="forums.hak5.org" />

	<rule from="^http://hak5\.org/" to="https://hak5.org/" />
	<rule from="^http://([^/:@\.]+\.)hak5\.org/" to="https://$1hak5.org/"/>
	<securecookie host="^forums\.hak5\.org$" name=".*" />
	<securecookie host="^.forums\.hak5\.org$" name=".*" />
	<securecookie host="^(www)?\.hak5\.org" name=".*"/>


</ruleset>
