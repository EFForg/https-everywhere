<!--
Get in www.le.com
Relate: letvimg.xml
Not exist:
	^
	www.
-->

<ruleset name="letvcdn">

	<!--	Mixedcontent:	-->
	<target host="static.letvcdn.com" />
	<exclusion pattern="^http://static\.letvcdn\.com/$" />

	<!--	Directly rewrite-->
	<target host="css.letvcdn.com" />
	<target host="js.letvcdn.com" />
	<target host="player.letvcdn.com" />

	<rule from="^http:" to="https:" />

</ruleset>
