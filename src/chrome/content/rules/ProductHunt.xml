<!--
	For producthunt.com

		Works:

			- www
			- $ (redirects to http://www.)

		Doesn't Work:

-->
<ruleset name="Product Hunt">
  <target host="producthunt.com" />
  <target host="*.producthunt.com" />

  <rule from="^http://(?:www\.)?producthunt\.com/"
          to="https://www.producthunt.com/" />
</ruleset>
