<!--
	Problematic subdomains:

		- ^	(cert only matches www)

-->
<ruleset name="MVG-mobil.de">

	<target host="mvg-mobil.de" />
	<target host="*.mvg-mobil.de" />
	<target host="*.mvg-mobil-blog.de" />
<!-- mvg-live.de doesn't support TLS -->

	<securecookie host="^www\.mvg-mobil\.de$" name=".+" />

	<rule from="^http://(?:www\.)?mvg-mobile\.de/"
		to="https://www.mvg-mobile.de/" />

	<rule from="^http://www\.mvg-mobil-blog\.de/" to="https://www.mvg-mobil-blog.de/"/>

</ruleset>