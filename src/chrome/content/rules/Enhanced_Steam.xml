<!--

	Invalid certificate:
		https://translation.enhancedsteam.com/

	Redirects:
    	- api.enhancedsteam.com → enhancedsteam.com
		- firefox.enhancedsteam.com → www.enhancedsteam.com/download/
-->
<ruleset name="Enhanced Steam">
	<target host="enhancedsteam.com" />
	<target host="www.enhancedsteam.com" />
	<target host="api.enhancedsteam.com" />
	<target host="firefox.enhancedsteam.com" />

	<securecookie host=".+" name=".+" />

	<rule from="^http:" to="https:" />
</ruleset>
