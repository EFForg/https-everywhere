<ruleset name="Board Game Arena">
	<target host="*.boardgamearena.com" />
	<target host="x.boardgamearena.net" />
	<exclusion pattern="^http://(?:[\w-]+\.)?(?:doc|studio)\.boardgamearena\.com" />

	<rule from="^http:" to="https:" />
	<securecookie host=".+" name=".+" />

	<test url="http://boardgamearena.com/"/>
	<test url="http://en.boardgamearena.com/"/>
	<test url="http://forum.boardgamearena.com/"/>
	<test url="http://studio.boardgamearena.com/" />
	<test url="http://zh-cn.studio.boardgamearena.com/" />
	<test url="http//x.boardgamearena.net/data/themereleases/160916-1851/img/logo/logo.png" />
</ruleset>
