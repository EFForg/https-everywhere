<!-- This ruleset covers University of Illinois cPanel Hosting.
     Every subdomain *.web.illinois.edu has a valid pre-configured certificate.
     By default, cPanel serves the same content over HTTP and HTTPS but does not
     upgrade to HTTPS.
     -->
<ruleset name="Web.illinois.edu">
	<target host="web.illinois.edu" />
	<target host="*.web.illinois.edu" />
	<test url="http://cancerdev.web.illinois.edu/" />
	<test url="http://tsbresearch.web.illinois.edu/wp/" />
	<test url="http://stateclimatologist.web.illinois.edu/" />
	<test url="http://amplifythesignal.web.illinois.edu/" />
	<test url="http://beecampususa.web.illinois.edu/" />

	<rule from="^http://www\.web\.illinois\.edu/" to="https://web.illinois.edu/" />
	<test url="http://www.web.illinois.edu/" />
	<test url="http://www.web.illinois.edu/cgi-sys/defaultwebpage.cgi" />
	<rule from="^http:" to="https:" />
</ruleset>
