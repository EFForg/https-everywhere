<!--
	Active mixed content:
		- www.pridetoronto.com

	Invalid certificate:
		- register.pridetoronto.com

	Timed out:
		- pridetoronto.ca, equivalent to www.pridetoronto.com
		- www.pridetoronto.ca, equivalent to www.pridetoronto.com
-->

<ruleset name="Pride Toronto" platform="mixedcontent">
	<target host="pridetoronto.ca" />
	<target host="www.pridetoronto.ca" />
	<target host="pridetoronto.com" />
	<target host="www.pridetoronto.com" />

	<rule from="^http://(www\.)?pridetoronto\.ca/"
		to="https://www.pridetoronto.com/" />

	<rule from="^http:" to="https:" />
</ruleset>
