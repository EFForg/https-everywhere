<!--
	For its new domain, see Btcc.com.xml

	Mismatch
		- cn
		- forwards
		- sandbox

	Expired
		- oidc
-->
<ruleset name="BTCChina.com">
	<!-- Redirect to https -->
	<target host="m.btcchina.com" />
		<rule from="^http://m\.btcchina\.com/"
			to="https://mobile.btcchina.com/" />
	<target host="p.btcchina.com" />
		<rule from="^http://p\.btcchina\.com/"
			to="https://wallet.btcchina.com/" />

	<target host="f.btcchina.com" />
	<target host="mobile.btcchina.com" />
	<target host="wallet.btcchina.com" />
		<rule from="^http://(f|mobile|wallet)\.btcchina\.com/"
			to="https://$1.btcchina.com/" />

	<!-- Redirect to btcc.com -->
	<target host="btcchina.com" />
		<rule from="^http://btcchina\.com/"
			to="https://www.btcc.com/" />
	<target host="cn.btcchina.com" />
		<rule from="^http://cn\.btcchina\.com/"
			to="https://api.btcc.com/" />
	<target host="forwards.btcchina.com" />
		<rule from="^http://forwards\.btcchina\.com/"
			to="https://pro.btcc.com/" />
	<target host="vip.btcchina.com" />
		<rule from="^http://vip\.btcchina\.com/"
			to="https://exchange.btcc.com/" />
	
	<target host="www.btcchina.com" />
	<target host="exchange.btcchina.com" />
	<target host="forever.btcchina.com" />
	<target host="pay.btcchina.com" />
		<rule from="^http://(\w+\.)btcchina\.com/"
			to="https://$1btcc.com/" />

	<securecookie host=".+" name=".+" />
</ruleset>
