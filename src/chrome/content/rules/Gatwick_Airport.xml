<ruleset name="Gatwick Airport">
    <target host="gatwickairport.com" />
    <target host="*.gatwickairport.com" />

    <rule from="^http://gatwickairport\.com/"
        to="https://www.gatwickairport.com/"/>
    <rule from="^http://([^/:@]+)?\.gatwickairport\.com/"
        to="https://$1.gatwickairport.com/" />
</ruleset>
