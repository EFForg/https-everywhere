    <securecookie host="^(?:.*\.)?post.*\.ch$" name=".+" />
    <securecookie host="^(?:.*\.)?swisspost\.ch$" name=".+" />
    <securecookie host="^(?:.*\.)?swisspost\.com$" name=".+" />
