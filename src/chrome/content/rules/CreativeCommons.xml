<!--
	Nonfunctional domains:

		- learn.creativecommons.org ¹
		- social.creativecommons.org ²
		- stats.creativecommons.org ²
		- support.creativecommons.org ²

	¹ Time out
	² Cert expired

	Most Creative Commons community affiliates (such as de.creativecommons.org,
	es.creativecommons.org, and us.creativecommons.org) do not fully support HTTPS.

-->
<ruleset name="Creative Commons">

	<target host="creativecommons.net" />

	<target host="creativecommons.org" />
	<target host="www.creativecommons.org" />
	<target host="api.creativecommons.org" />
	<target host="blog.creativecommons.org" />
	<target host="br.creativecommons.org" />
	<target host="donate.creativecommons.org" />
	<target host="i.creativecommons.org" />
	<target host="labs.creativecommons.org" />
	<target host="login.creativecommons.org" />
	<target host="mirrors.creativecommons.org" />
	<target host="search.creativecommons.org" />
	<target host="stateof.creativecommons.org" />
	<target host="store.creativecommons.org" />
	<target host="summit.creativecommons.org" />
	<target host="thelist.creativecommons.org" />
	<target host="wiki.creativecommons.org" />


	<securecookie host="(\.|^)(api|blog|br|donate|i|login|search|stateof|store|wiki|www)\.creativecommons\.org$"
			name=".+" />

	<rule from="^http:"
		to="https:" />

</ruleset>
