<ruleset name="Washington Post">

	<target host="washingtonpost.com" />
	<target host="*.washingtonpost.com" />

	<securecookie host=".+" name=".+" />

	<test url="http://washingtonpost.com/" />
	<test url="http://www.washingtonpost.com/" />
	<test url="http://img.washingtonpost.com/" />
	<test url="http://js.washingtonpost.com/" />
	<test url="http://subscribe.washingtonpost.com/" />
	
	<rule from="^http://washingtonpost\.com/"
		to="https://www.washingtonpost.com/" />
	<rule from="^http:"
		to="https:" />

</ruleset>
