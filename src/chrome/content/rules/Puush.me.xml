<!--
	Other puush rulesets:

		- Push.sh.xml


	Problematic subdomains:

		- www	(drops path)

-->
<ruleset name="puush.me">

	<target host="puush.me" />
	<target host="www.puush.me" />


	<securecookie host="^\.puush\.me$" name=".+" />


	<rule from="^http://(?:www\.)?puush\.me/"
		to="https://puush.me/" />

</ruleset>