<ruleset name="Secusmart">
    <target host="secusmart.com" />
    <target host="www.secusmart.com" />

    <securecookie host="^(?:.*\.)?secusmart\.com$" name=".+" />

    <rule from="^http://secusmart\.com/"
        to="https://www.secusmart.com/" />
    <rule from="^http://([^/:@]+)?\.secusmart\.com/"
        to="https://$1.secusmart.com/" />
</ruleset>
