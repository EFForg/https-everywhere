<!--
	Fully covered subdomains:

		- (www.)
		- static
		- tracker
		- type-backup
		- *		(per-client subdomains)

-->
<ruleset name="Blazonco.com">

	<target host="blazonco.com" />
	<target host="*.blazonco.com" />


	<securecookie host="^(?:.*\.)?blazonco\.com$" name=".+" />


	<rule from="^http://([\w-]+\.)?blazonco\.com/"
		to="https://$1blazonco.com/" />

</ruleset>