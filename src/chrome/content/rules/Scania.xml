<!--
	Nonfunctional subdomains:

		- (www.)
		- campaign	(connection refused)
		- newsroom	(too many redirects)
		- home
		- store		(timeout)
		- webstore	(timeout)
		- de		(timeout)
		- se		(timeout)
		- owa		(timeout)
		- toolkit	(timeout)
		- www[23]	(shows www4; mismatched, CN: www4.scania.com)

-->
<ruleset name="Scania (partial)">

	<target host="*.scania.com" />


	<securecookie host=".+" name=".+" />


	<rule from="^http://(?:home|newsroom)\.scania\.com/"
		to="https://www.scania.com/" />

		<test url="http://home.scania.com/" />
		<test url="http://newsroom.scania.com/" />

	<rule from="^http:"
		to="https:" />

		<test url="http://www.scania.com/" />
		<test url="http://portal.scania.com/" />
		<test url="http://blog.scania.com/" />
		<test url="http://webaccess.scania.com/" />
		<test url="http://webshop.scania.com/" />
		<test url="http://supplier.scania.com/" />
		<test url="http://static.scania.com/" />
		<test url="http://issues.scania.com/" />
		<test url="http://hack.scania.com/" />

</ruleset>
