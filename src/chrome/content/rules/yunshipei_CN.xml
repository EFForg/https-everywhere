<!--
	Subdomains appearing in this ruleset have 2 main reasons:
	1. They are using non-https CDN overseas
	2. They are dropped by The Great Firewall when
	foreign visitors try to use https connection.
	Chinese users can manually enable this ruleset.
-->

<ruleset name="yunshipei_CN" default_off="Only available in China">

	<target host="yunshipei.com" />
	
	<rule from="^http://yunshipei\.com/" to="https://www.yunshipei.com/" />

	
	<target host="api.yunshipei.com" />
	<target host="s.yunshipei.com" />
		<test url="http://s.yunshipei.com/javascript/sm.min.js" />
	<target host="www.yunshipei.com" />

	<rule from="^http:" to="https:" />

</ruleset>
