<ruleset name="DPD.com">
  <target host=      "dpd.com" />
  <target host=  "www.dpd.com" />
  <target host="mydpd.dpd.com" />
  <target host=       "dpd.at" />
  <target host=   "www.dpd.at" />
  <target host=       "dpd.ch" />
  <target host=   "www.dpd.ch" />
  <target host=       "dpd.de" />
  <target host=   "www.dpd.de" />

  <securecookie host="." name="." />

  <rule from="^http://dpd\.com/"
	  to="https://www.dpd.com/" />
  <rule from="^http://(www\.)?dpd\.(at|ch|de)/.*"
	  to="https://www.dpd.com/$2" />
  <rule from="^http:"
          to="https:" />
</ruleset>
