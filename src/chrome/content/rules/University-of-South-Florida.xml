	<target host="my.usf.edu" />
	<target host="mysites.usf.edu" />
	<target host="team.usf.edu" />
	<target host="netid.usf.edu" />
	<target host="usfweb.usf.edu" />
	<target host="cdn.usf.edu" />
	<target host="cmsfs.forest.usf.edu" />
