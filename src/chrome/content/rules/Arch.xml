	<target host="archlinux.org" />
	<target host="*.archlinux.org" />

		<test url="http://aur.archlinux.org/" />
		<test url="http://bbs.archlinux.org/" />
		<test url="http://bugs.archlinux.org/" />
		<test url="http://lists.archlinux.org/" />
		<test url="http://mailman.archlinux.org/" />
		<test url="http://planet.archlinux.org/" />
		<test url="http://wiki.archlinux.org/" />
		<test url="http://www.archlinux.org/" />


	<!--	Not secured by server:
					-->
