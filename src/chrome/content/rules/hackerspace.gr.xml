<ruleset name="hackerspace.gr">
  <target host="hackerspace.gr" />
  <target host="*.hackerspace.gr" />

  <securecookie host="^(?:(www|media|lists|pad)\.)?hackerspace\.gr$" name=".*"/>

  <rule from="^http://((www|media|lists|pad)\.)?hackerspace\.gr/" to="https://$1hackerspace.gr/"/>
</ruleset>
