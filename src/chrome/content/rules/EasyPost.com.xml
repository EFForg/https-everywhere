<!--
	Problematic subdomains:

		- status *

	* StatusPage

-->
<ruleset name="EasyPost.com">

	<target host="easypost.com" />
	<target host="*.easypost.com" />


	<rule from="^http://(www\.)?easypost\.com/"
		to="https://$1easypost.com/" />

	<rule from="^http://status\.easypost\.com/"
		to="https://easypost.statuspage.io/" />

</ruleset>
