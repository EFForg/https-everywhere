<!--

	Server sends includeSubDomains in STS header.

-->
<ruleset name="ProtonMail.com">

	<!--	Direct rewrites:
				-->
	<target host="protonmail.ch" />
	<target host="*.protonmail.ch" />
	<target host="protonmail.com" />
	<target host="*.protonmail.com" />

		<test url="http://www.protonmail.ch/" />
		<test url="http://www.protonmail.com/" />
		<test url="http://app.protonmail.ch/" />
		<test url="http://blog.protonmail.ch" />


	<securecookie host=".+" name=".+" />


	<rule from="^http:"
		to="https:" />

</ruleset>
