<ruleset name="BeWelcome">
  <target host="bewelcome.com" />
  <target host="www.bewelcome.com" />
  <target host="beta.bewelcome.com" />
  <target host="bewelcome.org" />
  <target host="www.bewelcome.org" />
  <target host="beta.bewelcome.org" />
  <target host="bewelco.me" />

  <rule from="^http://bewelcome\.com/" to="https://www.bewelcome.org/" />  
  <rule from="^http://bewelcome\.org/" to="https://www.bewelcome.org/" />  
  <rule from="^http://(\w+)\.bewelcome\.(org|com)/" to="https://$1.bewelcome.org/" />
  <rule from="^http://bewelco\.me/" to="https://www.bewelcome.org/" />

  <test url="http://www.bewelcome.org/" />
  <test url="http://beta.bewelcome.org/" />
  <test url="http://www.bewelcome.com/" />
  <test url="http://beta.bewelcome.com/" />
  
  <securecookie host="^(.+.)?bewelcome.(com|org)$" name=".*" />
</ruleset>
