<ruleset name="BeWelcome">
  <target host="bewelcome.com" />
  <target host="*.bewelcome.com" />
  <target host="bewelcome.org" />
  <target host="*.bewelcome.org" />

  <test url="http://bewelcome.com/" />
  <test url="http://www.bewelcome.com/" />
  <test url="http://beta.bewelcome.com/" />
  <test url="http://bewelcome.org/" />
  <test url="http://www.bewelcome.org/" />
  <test url="http://beta.bewelcome.org/" />
  
  <rule from="^http://(.+(@|\.))?bewelcome\.(org|com)/" to="https://$1bewelcome\.org/" />
  
  <securecookie host="^(.+.)?bewelcome\.(com|org)$" name=".*" />
</ruleset>