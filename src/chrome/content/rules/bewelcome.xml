<ruleset name="BeWelcome">
  <target host="bewelcome.org" />
  <target host="*.bewelcome.org" />

  <test url="http://www.bewelcome.org/" />
  <test url="http://beta.bewelcome.org/" />
  
  <rule from="^http://([\w-]+\.)?bewelcome\.org/" to="https://$1bewelcome\.org/" />
  
  <securecookie host="^(.+.)?bewelcome\.org$" name=".*" />
</ruleset>