<!--
	Mixed content:

		- Images from $self *

	* Secured by us

-->
<ruleset name="Trust-IT.gr">

	<target host="trust-it.gr" />
	<target host="*.trust-it.gr" />


	<!--	Server doesn't set Secure for:
						-->
	<securecookie host="^(?:www)?\.trust-it\.gr$" name=".+" />


	<rule from="^http://(www\.)?trust-it\.gr/"
		to="https://$1trust-it.gr/" />

</ruleset>
