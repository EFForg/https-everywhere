<ruleset name="TCF.org (partial)">

	<target host="tcf.org" />
	<target host="www.tcf.org" />
		<!--
			Redirects to http:
						-->
		<!--exclusion pattern="^http://(www\.)?tcf\.org/($|bookstore$|contact_us$|newsletter$)" /-->
		<!--
			Exceptions:
					-->
		<exclusion pattern="^http://(?:www\.)?tcf\.org/+(?!assets/|donate(?:$|[?/])|favicon\.ico|favicon\.png|images/|stylesheets/)" />


	<rule from="^http://(www\.)?tcf\.org/"
		to="https://$1tcf.org/" />

</ruleset>
