<ruleset name="SlimerJS">

	<target host="*.slimerjs.org" />
	<target host="slimerjs.org" />

	<securecookie host="^.*\.?slimerjs\.org$" name=".+" />

	<rule from="^http://(www\.)?slimerjs\.org/"
		to="https://slimerjs.org/" />
	<rule from="^http:"
		to="https:" />

	<test url="http://download.slimerjs.org/" />
	<test url="http://www.slimerjs.org/" />
	<test url="http://docs.slimerjs.org/" />
	<test url="http://slimerjs.org/" />

</ruleset>
