<!--
	Mixed content:
		- ads from self on www
		- images from d34yn14tavczy0.cloudfront.net on www

	Breaks various site parts.
	See https://github.com/EFForg/https-everywhere/issues/11029

-->
<ruleset name="MyFitnessPal" platform="mixedcontent" default_off="redirect loop">

	<target host="myfitnesspal.com" />
	<target host="www.myfitnesspal.com" />
		<!-- Mixed content -->
		<test url="http://www.myfitnesspal.com/" />
		<!-- Redirect loop -->
		<test url="http://www.myfitnesspal.com/food/calorie-chart-nutrition-facts" />
	<target host="blog.myfitnesspal.com" />

	<securecookie host="^www\.myfitnesspal\.com$" name=".+" />

	<rule from="^http:" to="https:" />

</ruleset>
