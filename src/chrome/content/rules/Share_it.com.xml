	<target host="secure.shareit.com" />

	<!--	Special cases:
				-->
	<target host="shareit.com" />
	<target host="www.shareit.com" />

		<exclusion pattern="^http://(?:www\.)?shareit\.com/(?!signup\.html)" />

			<!--	+ve:
					-->
