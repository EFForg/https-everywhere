	<!--	Not secured by server:
					-->
	<!--securecookie host="^(ccc|secure)\.shareit\.com$" name="^BIGipServerp(-\w+){4}-\d+$" /-->

	<securecookie host="^(?:ccc|secure)\.shareit\.com$" name=".+" />


	<rule from="^http://(?:www\.)?shareit\.com/"
		to="https://secure.shareit.com/" />

	<rule from="^http:"
		to="https:" />

</ruleset>
