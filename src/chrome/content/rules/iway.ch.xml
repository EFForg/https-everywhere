<!--
     iway.ch

     Known broken domains:
       - netbackup.iway.ch
       - statistik.iway.ch
-->

<ruleset name="iway.ch">
    <target host="iway.ch" />
    <target host="*.iway.ch" />

    <exclusion pattern="^http://netbackup\.iway\.ch" />
    <exclusion pattern="^http://statistik\.iway\.ch" />

    <rule from="^http://iway\.ch/"
        to="https://www.iway.ch/"/>
    <rule from="^http://([^/:@]+)?\.iway\.ch/"
        to="https://$1.iway.ch/" />
</ruleset>
