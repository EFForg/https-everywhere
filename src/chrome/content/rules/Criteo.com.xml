<!--

	For more Criteo coverage, see Criteo.net.xml

	Nonfunctional domains:

		- www.criteo.com	(timeout)

-->
<ruleset name="Criteo.com (partial)">

	<target host="*.jp.as.criteo.com" />
	<target host="advertising.criteo.com" />
	<target host="cas.criteo.com" />
	<target host="dis.*.criteo.com" />
	<target host="dis.criteo.com" />
	<target host="gum.criteo.com" />
	<target host="rta.criteo.com" />
	<target host="rtax.criteo.com" />
	<target host="sslwidget.criteo.com" />
	<target host="static.criteo.com" />
	<target host="widget.criteo.com" />
	<target host="widget.us.criteo.com" />

	<securecookie host="." name="." />

	<rule from="^http://([\w-]+)\.jp\.as\.criteo\.com/"
		to="https://$1.jp.as.criteo.com/" />

		<test url="http://cas.jp.as.criteo.com/delivery/r/ajs.php" />
		<test url="http://cat.jp.as.criteo.com/delivery/lg.php" />
		<test url="http://dis.jp.as.criteo.com/dis/dis.aspx" />

	<rule from="^http://dis\.([\w-]+)\.criteo\.com/"
		to="https://dis.$1.criteo.com/" />

		<test url="http://dis.as.criteo.com/dis/dis.aspx" />
		<test url="http://dis.us.criteo.com/dis/dis.aspx" />

	<rule from="^http:"
		to="https:" />

</ruleset>
