<ruleset name="Deutsche-Rentenversicherung.de">

	<target host=       "deutsche-rentenversicherung.de" />
	<target host=   "www.deutsche-rentenversicherung.de" />
	<target host="static.deutsche-rentenversicherung-bund.de" />
	<target host=   "www.deutsche-rentenversicherung-bund.de" />
	<target host=       "deutsche-rentenversicherung-bund.de" />
	<target host="www.drv-bund.de" />
	<target host=    "drv-bund.de" />

  	<securecookie host="^www\.deutsche-rentenversicherung\.de$" name=".+" />

	<!-- could not resolve host -->
	<rule from="^http://deutsche-rentenversicherung(-bund)?\.de/"
		to="https://www.deutsche-rentenversicherung.de/" />

		<test url="http://www.deutsche-rentenversicherung.de/" />

	<!-- hostname mismatch, CN: www.deutsche-rentenversicherung-bund.de -->
	<rule from="^http://(www\.)?drv-bund\.de/"
		to="https://www.deutsche-rentenversicherung.de/" />

	<rule from="^http:"
		to="https:" />

</ruleset>
