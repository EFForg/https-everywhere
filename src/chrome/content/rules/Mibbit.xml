<!--
	CDN buckets:

		- s3.amazonaws.com/mibbit/


	Nonfunctional subdomains:

		- a *
		- blog		(shows www, valid cert)

	* 401, valid cert


	Fully covered subdomains:

		- (www.)

		- chat subdomains:

			- ^
			- 02
			- client01

		- data
		- search
		- widget
		- widget0[1-4]
		- widgetmanager
		- wiki

-->
<ruleset name="Mibbit">

	<target host="mibbit.com" />
	<target host="*.mibbit.com" />


	<securecookie host="^(?:.*\.)?mibbit.com$" name=".+" />


	<rule from="^http://((?:chat|(?:02|client01)\.chat|data|search|widget(?:0\d|manager)?|wiki|www)\.)?mibbit\.com/"
		to="https://$1mibbit.com/" />

</ruleset>
