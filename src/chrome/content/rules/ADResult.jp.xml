<!--

	For more GMO coverage, see GMO_Internet.xml

	Problematic subdomains:

		- ad	(invalid cert)
		- www	(invalid cert)

-->

<ruleset name="ADResult.jp">

	<target host="*.adresult.jp" />

	<exclusion pattern="^http://(ad|www)\.adresult\.jp/.+" />
		<test url="http://ad.adresult.jp/pixel" />
		<test url="http://www.adresult.jp/img/favicon.ico" />
		<test url="http://www.adresult.jp/css/common.css" />

	<rule from="^http:"
		to="https:" />

		<test url="http://ads.adresult.jp/yie/ld/ifk" />

</ruleset>
