	<securecookie host="^(?:\w\w\.)?help\.pinterest\.com$" name=".+" />


	<rule from="^http://blog-assets\.pinterest\.com/"
		to="https://d5eppwnwxs8d9.cloudfront.net/" />

	<rule from="^http://media-cache-ec[01]\.pinterest\.com/"
