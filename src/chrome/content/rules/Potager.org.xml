<ruleset name="potager.org">

  <target host="potager.org" />
  <target host="*.potager.org" />
  <target host="poivron.org" />
  <target host="*.poivron.org" />
  <target host="pimienta.org" />
  <target host="*.pimienta.org" />
  <target host="sweetpepper.org" />
  <target host="*.sweetpepper.org" />


	<securecookie host="^mail\.potager\.org$" name=".+" />


  <rule from="^http://potager\.org/" to="https://potager.org/" />
  <rule from="^http://([^/:@\.]+)\.potager\.org/" to="https://$1.potager.org/" />
  <rule from="^http://poivron\.org/" to="https://poivron.org/" />
  <rule from="^http://([^/:@\.]+)\.poivron\.org/" to="https://$1.poivron.org/" />
  <rule from="^http://pimienta\.org/" to="https://pimienta.org/" />
  <rule from="^http://([^/:@\.]+)\.pimienta\.org/" to="https://$1.pimienta.org/" />
  <rule from="^http://sweetpepper\.org/" to="https://sweetpepper.org/" />
  <rule from="^http://([^/:@\.]+)\.sweetpepper\.org/" to="https://$1.sweetpepper.org/" />

</ruleset>
