<!--
	Refused:
		admin.doi.org
		notfound.doi.org

	Bad certificate:
		www.dx.doi.org

	Timeout:
		meta.doi.org
		test.doi.org
-->

<ruleset name="DOI.org">

	<target host="doi.org" />
	<target host="www.doi.org" />
	<target host="dx.doi.org" />

	<securecookie host="(.+\.)?doi\.org$" name=".+" />

	<rule from="^http:" to="https:" />

</ruleset>
