<!--
	For rules that are on by default, see Argos.xml.


	argos.ugc.bazaarvoice.com/answers/

-->
<ruleset name="Argos (mismatches)" default_off="mismatched">

	<target host="answers.argos.co.uk" />
	<target host="reviews.argos.co.uk" />
	<target host="answers.argos.ie" />
	<target host="reviews.argos.ie" />
		<!--	Redirect to http.	-->
		<exclusion pattern="^http://answers\.argos\.(?:co\.uk|ie)/(?:\d+-\w\w_\w\w/allquestions|category/\d+/category|product/\d+/questions)\.htm(?:$|\?)" />


	<!--	Cookies are handled in Argos.xml.


		Akamai	-->
	<rule from="^http://(answer|review)s\.argos\.(co\.uk|ie)/"
		to="https://$1s.argos.$2/" />

</ruleset>
