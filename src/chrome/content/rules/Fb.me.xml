<!--
	For other Facebook coverage, see Facebook.xml.


	Problematic subdomains:

		- on

-->
<ruleset name="Fb.me">

	<target host="fb.me" />
	<target host="*.fb.me" />


	<rule from="^http://(www\.)?fb\.me/"
		to="https://$1fb.me/" />

	<rule from="^http://on\.fb\.me/"
		to="https://bit.ly/" />

</ruleset>
