<!--
	Nonfunctional hosts in *.pctipp.ch:
		- go.pctipp.ch
		- m.pctipp.ch
		- redi.pctipp.ch

	h: http redirect
	m: certificate mismatch
	r: connection refused
	s: self-signed certificate
	t: timeout on https
-->
<ruleset name="PCtipp.ch (partial)">
	<target host="pctipp.ch"/>
	<target host="www.pctipp.ch"/>

	<!-- HTTP redirect -->
	<exclusion pattern="http://(www\.)?pctipp\.ch/$"/>

	<test url="http://pctipp.ch/fileadmin/templates/images/sprite.png"/>
	<test url="http://www.pctipp.ch/fileadmin/templates/images/sprite.png"/>
	<test url="http://pctipp.ch/typo3/sysext/install/composer.json"/>
	<test url="http://www.pctipp.ch/typo3/sysext/install/composer.json"/>
	<test url="http://pctipp.ch/typo3_src/typo3/sysext/install/composer.json"/>
	<test url="http://www.pctipp.ch/typo3_src/typo3/sysext/install/composer.json"/>
	<test url="http://pctipp.ch/typo3conf/ext/realurl/ext_icon.gif"/>
	<test url="http://www.pctipp.ch/typo3conf/ext/realurl/ext_icon.gif"/>
	<test url="http://pctipp.ch/typo3temp/index.html"/>
	<test url="http://www.pctipp.ch/typo3temp/index.html"/>
	<test url="http://pctipp.ch/uploads/media/index.html"/>
	<test url="http://www.pctipp.ch/uploads/media/index.html"/>
	<test url="http://pctipp.ch/mein-pctipp/login/"/>
	<test url="http://www.pctipp.ch/mein-pctipp/login/"/>
	<test url="http://pctipp.ch/mein-pctipp/benutzerdaten/"/>
	<test url="http://www.pctipp.ch/mein-pctipp/benutzerdaten/"/>
	<test url="http://pctipp.ch/mein-pctipp/aktivierung/"/>
	<test url="http://www.pctipp.ch/mein-pctipp/aktivierung/"/>

	<rule from="^http://(www\.)?pctipp\.ch/(fileadmin|forum|mein-pctipp/(aktivierung|benutzerdaten|login)|typo3|typo3_src|typo3conf|typo3temp|uploads)/"
		to="https://$1pctipp.ch/$2/"/>
</ruleset>
