<!--

	Problematic hosts in *defora.org:

		- ^ (mismatched)
		- mahce (no https)
		- imap (no https)
		- lists (no https)
		- mx (no https)
		- ftp (no https)
		- preach (mismatched)

-->
<ruleset name="Defora.org">

	<target host="defora.org" />
	<target host="www.defora.org" />
	<target host="git.defora.org" />

	<rule from="^http://defora\.org/"
		to="https://www.defora.org/" />

	<rule from="^http:"
		to="https:" />

</ruleset>
