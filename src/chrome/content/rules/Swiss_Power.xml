<ruleset name="Swiss Power">
    <target host="swisspower.ch" />
    <target host="*.swisspower.ch" />

    <securecookie host="^(?:.*\.)?swisspower\.ch$" name=".+" />

    <rule from="^http://swisspower\.ch/"
        to="https://www.swisspower.ch/" />
    <rule from="^http://([^/:@]+)?\.swisspower\.ch/"
        to="https://$1.swisspower.ch/" />
</ruleset>
