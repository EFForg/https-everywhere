<!--
	Fully covered subdomains:

		- (www.)?
		- cdn
		- help

-->
<ruleset name="EgoPay.com" default_off="connection dropped">

	<!--	Direct rewrites:
				-->
	<target host="egopay.com" />
	<target host="cdn.egopay.com" />
	<target host="help.egopay.com" />
	<target host="www.egopay.com" />


	<rule from="^http:"
		to="https:" />

</ruleset>
