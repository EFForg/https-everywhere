<!--
	For rules that are on by default, see TED.xml

-->
<ruleset name="TED (mismatches)" default_off="mismatched">

	<!--	- blog CN: *.wordpress.com
		- video: Akamai
				-->
	<target host="blog.ted.com" />
	<target host="video.ted.com" />


	<rule from="^http://(blog|video)\.ted\.com/"
		to="https://$1.ted.com/" />

</ruleset>
