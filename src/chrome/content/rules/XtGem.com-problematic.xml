<!--
	For rules that are on by default, see XtGem.com.xml.

-->
<ruleset name="XtGem.com (problematic)" default_off="expired" platform="mixedcontent">

	<!--	Direct rewrites:
				-->
	<target host="blog.xtgem.com" />
	<target host="bucklink.xtgem.com" />
	<target host="syntax.xtgem.com" />


	<securecookie host="^(?:blog|\.bucklink|syntax)\.xtgem\.com$" name=".+" />


	<rule from="^http:"
		to="https:" />

</ruleset>
