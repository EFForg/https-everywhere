<!--

	Problematic domains:

		- blog	(invalid cert)

-->
<ruleset name="post-theory">

	<target host="post-theory.com" />
	<target host="static.post-theory.com" />

	<exclusion pattern="^http://post-theory\.com/$" />
	<exclusion pattern="^http://static\.post-theory\.com/$" />

	<test url="http://post-theory.com/public/tagcloud/gmomedia-engineer" />
	<test url="http://static.post-theory.com/style/pttheme.css" />

	<rule from="^http:"
		to="https:" />

</ruleset>
