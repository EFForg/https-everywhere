<ruleset name="Greyhound">
        <target host="greyhound.com" />
        <target host="www.greyhound.com" />
        <target host="greyhound.ca" />
        <target host="www.greyhound.ca" />
        <target host="greyhound.com.mx" />
        <target host="www.greyhound.com.mx" />
