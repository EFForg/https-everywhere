<!--
	Other Visa rulesets:

		- Visa_Buxx.com.xml
		- Visa_Europe.xml


	Problematic subdomains:

		- ^	(akamai)
		- investor


	Insecure cookies are set for these domains:

		- .visa.com
		- usa.visa.com

-->
<ruleset name="Visa (partial)">

	<target host="visa.com" />
	<target host="www.visa.com" />
	<target host="corporate.visa.com" />
	<target host="usa.visa.com" />

	<!--	Not secured by server:
					-->
	<!--securecookie host="^\.visa\.com$" name="^visaCookie$" /-->
	<!--securecookie host="^usa\.visa\.com$" name="^visaAnonCookie$" /-->

	<!-- start page works, other pages don't:
	     http://www.visa.com/atmlocator
	     http://www.visa.com/globalgateway
	-->
	<exclusion pattern="^http://(www\.)?visa\.com/.+" />
	<test url="http://www.visa.com/atmlocator" />
	<test url="http://www.visa.com/globalgateway" />
	<test url="http://visa.com/globalgateway" />

	<rule from="^http:"
		to="https:" />
</ruleset>
