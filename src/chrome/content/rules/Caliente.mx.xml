<!--
	401, HTTPS only:
		bingo.caliente.mx
		casino.caliente.mx
		casinoenvivo.caliente.mx
		juegos.caliente.mx
		movil.caliente.mx
		poker.caliente.mx
		slots.caliente.mx
		sports-portal.caliente.mx
		vegas.caliente.mx

		static.caliente.mx requires authentication for some HTTPS content but
		not others. For example:
			https://static.caliente.mx/casino/library/winner_img/footer/payment_line_cc3-B.png requires authentication
			https://static.caliente.mx/www/images/loader-login.gif does not require authentication.
		This means that a user visiting for example http://bingo.caliente.mx/bingo
		will get a login prompt when the page tries to load static content, but
		not when visiting https://www.caliente.mx. We might be able to target
		specific static content, but to avoid the risk of causing a bad user
		experience, we are not including static.caliente.mx as a target at all.

	Different HTTP/HTTPS content on root URL, and no other working URL known:
		media.caliente.mx (HTTP redirects, HTTPS does not redirect)

	Invalid certificate:
		maintenance.caliente.mx

	No working URL known:
		promo.caliente.mx

	Refused:
		news.caliente.mx

-->
<ruleset name="Caliente.mx">
	<target host="caliente.mx" />
	<target host="www.caliente.mx" />
	<target host="bet.caliente.mx" />
	<target host="chat.caliente.mx" />
		<test url="http://chat.caliente.mx/chat_web/static/images/smiley1.GIF" />
	<target host="deportesindice.caliente.mx" />
	<target host="m.caliente.mx" />
	<target host="mobile.caliente.mx" />
	<!-- A time-sensitive HTTP 200 test case for oapi.caliente.mx can be found at www.caliente.mx. -->
	<target host="oapi.caliente.mx" />
	<target host="online.caliente.mx" />
	<target host="pgtools.caliente.mx" />
	<target host="sports.caliente.mx" />
	<target host="utils.caliente.mx" />

	<rule from="^http:" to="https:" />
</ruleset>
