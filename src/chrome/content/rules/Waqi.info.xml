<!--
	Other related ruleset:
		- Aqicn.org.xml


	Non-functional subdomains:
		- www		(m)
		- api		(c)
		- cwop1		(r)
		- cwop2		(m)
		- data		(m)
		- epi		(c)
		- feed	(m)
		- git		(e)
		- img		(m)
		- ipi		(c)
		- jp1		(e)
		- jp1n	(m)
		- jp2		(m)
		- jp3		(m)
		- mail	(m)
		- mapqb		(r)
		- online	(r)
		- sg1		(m)
		- stat	(r)
		- static	(m)
		- sw-wind	(r)
		- sw2		(r)
		- sw3		(m)
		- test	(m)
		- tiles2	(e)

	c: connection error
	e: expired certificate
	h: http redirect
	i: invalid certificate chain
	m: certificate mismatch
	r: connection refused
	s: self-signed certificate
	t: timeout on https
-->
<ruleset name="Waqi.info">

	<target host="waqi.info" />
	<target host="www.waqi.info" />
	<target host="cwop.waqi.info" />
	<target host="forecast.waqi.info" />
	<target host="tiles.waqi.info" />
	<target host="widgets.waqi.info" />
	<target host="wind.waqi.info" />

	<securecookie host=".+" name=".+" />

	<rule from="^http://www\.waqi\.info/"
		to="https://waqi.info/" />

	<rule from="^http:"
		to="https:" />
</ruleset>
