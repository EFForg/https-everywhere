<!-- Do not change -> approved by 1and1 staff -->
<ruleset name="GMX">

	<!--
		The following URI's get redirected to gmx.net by the corresponding server:
		- gmx.biz
		- gmx.cc
		- gmx.com.tr
		- gmx.de
		- gmx.info
		- gmx.lu
		- gmx.org
		- gmx.co.in
	-->
	<target host=  "gmx.net" />
	<target host="*.gmx.net" />

	<target host=  "gmx.at"/>
	<target host="*.gmx.at" />

	<target host=  "gmx.ch"/>
	<target host="*.gmx.ch" />

	<!-- GMX.com -->

	<!--
		The following URI's get redirected to gmx.com by the corresponding server:
		- gmx.tm
		- gmx.li
		- gmx.ph
		- gmx.sg
		- gmx.tw
		- gmx.hk
		- gmx.it
		- gmx.se
		- gmx.us
	-->
	<target host=  "gmx.com" />
	<target host="*.gmx.com" />

	<target host=  "gmx.co.uk" />
	<target host="*.gmx.co.uk" />

	<!-- GMX.fr -->

	<target host=  "gmx.fr"/>
	<target host="*.gmx.fr" />

	<!-- GMX.es -->

	<target host=  "gmx.es"/>
	<target host="*.gmx.es" />

	<!-- Exludes -->

	<exclusion pattern="^http://(www\.)?gmx\.[net|at|ch]/magazine/" />
	<exclusion pattern="^http://i[0-9]\.gmx\.[net|at|ch]" />

	<!-- Cookies -->

	<securecookie host="^(?:.*\.)?gmx\.[net|at|ch|com|co\.uk|fr|es]" name=".+" />

	<!-- Rules -->

	<rule from="^http:"
		  to="https:" />

	<!-- Tests -->

	<test url="http://www.gmx.net" />
	<test url="http://www.gmx.at" />
	<test url="http://www.gmx.ch" />
	<test url="http://www.gmx.com" />
	<test url="http://www.gmx.co.uk" />
	<test url="http://www.gmx.fr" />
	<test url="http://www.gmx.es" />

	<test url="http://www.gmx.net/magazine/" />
	<test url="http://www.gmx.at/magazine/" />
	<test url="http://www.gmx.ch/magazine/" />
	<test url="http://gmx.net/magazine/" />
	<test url="http://gmx.at/magazine/" />
	<test url="http://gmx.ch/magazine/" />

	<test url="http://i0.gmx.ch/" />
	<test url="http://i1.gmx.ch/" />
	<test url="http://i2.gmx.ch/" />

</ruleset>