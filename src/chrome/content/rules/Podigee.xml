<!--
	Timeout:
		- blog.podigee.com
		- cdn.podigee.com
		- signup.podigee.com

	Connection refused:
		- docs.podigee.com
-->
<ruleset name="Podigee">

	<target host="podigee.com" />
	<target host="www.podigee.com" />

	<target host="app.podigee.com" />
	<target host="help.podigee.com" />
	<target host="hilfe.podigee.com" />
	<target host="images.podigee.com" />
	<target host="quickplay.podigee.com" />
	<target host="staging-www.podigee.com" />
	<target host="static.podigee.com" />

	<securecookie host=".+" name=".+" />

	<rule from="^http://(www\.)?podigee.\.com/"
		to="https://www.podigee.com/" />

	<rule from="^http:" to="https:" />

</ruleset>

