<ruleset name="CERT-UK">
    <target host="cert.gov.uk" />
    <target host="*.cert.gov.uk" />

    <securecookie host="^(?:.*\.)?cert\.gov\.uk$" name=".+" />

    <rule from="^http://cert\.gov\.uk/"
        to="https://www.cert.gov.uk/" />
    <rule from="^http://([^/:@]+)?\.cert\.gov\.uk/"
        to="https://$1.cert.gov.uk/" />
</ruleset>
