<ruleset name="2o7.net">
	<target host="2o7.net" />
	<target host="*.2o7.net" />
	<target host="*.112.2o7.net" />
	<target host="*.122.2o7.net" />
	<rule from="^http://2o7\.net/" to="https://2o7.net/"/>
  <rule from="^http://([^/:@\.]+)\.2o7\.net/" to="https://$1.2o7.net/"/>
  <rule from="^http://([^/:@\.]+)\.112\.2o7\.net/" to="https://$1.112.2o7.net/"/>
  <rule from="^http://([^/:@\.]+)\.122\.2o7\.net/" to="https://$1.122.2o7.net/"/>
</ruleset>

