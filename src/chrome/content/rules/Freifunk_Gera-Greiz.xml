<ruleset name="Freifunk Gera-Greiz">
	<target host="freifunk-gera-greiz.de"/>
	<target host="www.freifunk-gera-greiz.de"/>

	<test url="http://www.freifunk-gera-greiz.de/favicon.ico"/>

	<target host="gera.freifunk.net"/>
	<target host="greiz.freifunk.net"/>
	<target host="gera-greiz.freifunk.net"/>

	<rule from="^http://(?:gera|greiz|gera-greiz)\.freifunk\.net/(.*)"
	      to="https://freifunk-gera-greiz.de/$1"/>
	<test url="http://gera.freifunk.net/favicon.ico"/>

	<rule from="^http:"
	      to="https:"/>
</ruleset>
