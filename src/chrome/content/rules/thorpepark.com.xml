<!--
	Not found:
		12p.thorpepark.com
		api.12p.thorpepark.com
		secure.thorpepark.com

	Timeout:
		mob.thorpepark.com
		mobile.thorpepark.com
		stagingmobile.thorpepark.com
		stealth.thorpepark.com
-->
<ruleset name="THORPE PARK Resort">

	<target host="thorpepark.com" />
	<target host="www.thorpepark.com" />

	<securecookie host=".+" name=".+" />

	<!-- Timeout on https://thorpepark.com/,
	http://thorpepark.com/ redirects to http://www.thorpepark.com/ -->
	<rule from="^http://thorpepark\.com/"
		to="https://www.thorpepark.com/" />

	<rule from="^http:" to="https:" />

</ruleset>
