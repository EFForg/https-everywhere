<!--

	For other DMM coverage, see DMM.com.xml.

	Nonfunctional subdomains:

		- actress	(times out)
		- news	(times out)
		- vr0001	(times out)

	Problematic subdomains:

		- image.news	(invalid cert)
		- lite.yyc	(invalid cert)
		- yyc	(invalid cert)

-->
<ruleset name="DMM.co.jp" platform="mixedcontent">

	<target host="blog.dmm.co.jp" />
	<target host="book.dmm.co.jp" />
	<target host="display.dmm.co.jp" />
	<target host="dlsoft.dmm.co.jp" />
	<target host="mobile.dmm.co.jp" />
	<target host="p.dmm.co.jp" />
	<target host="pics.dmm.co.jp" />
	<target host="sp.dmm.co.jp" />
	<target host="www.dmm.co.jp" />

	<exclusion pattern="^http://blog\.dmm\.co\.jp/$" />
	<exclusion pattern="^http://dlsoft\.dmm\.co\.jp/$" />
	<exclusion pattern="^http://mobile\.dmm\.co\.jp/$" />
	<exclusion pattern="^http://www\.dmm\.co\.jp/$" />

	<rule from="^http:"
		to="https:" />

</ruleset>
