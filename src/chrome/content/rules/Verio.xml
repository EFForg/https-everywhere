<ruleset name="Verio (partial)">

	<target host="verio.com" />
	<target host="support.verio.com" />
	<target host="www.verio.com" />
		<exclusion pattern="^http://(?:www\.)?verio\.com/(?!images/|myverio/|order/)" />


	<rule from="^http:" to="https:" />

</ruleset>