<ruleset name="Bugcrowd.com">

	<!--	Direct rewrites:
				-->
	<target host="bugcrowd.com" />
	<target host="blog.bugcrowd.com" />
	<target host="tracker.bugcrowd.com" />
	<target host="www.bugcrowd.com" />


	<!--	CloudFlare cookies:
					-->
	<!--securecookie host="^\.bugcrowd\.com$" name="^(__cfduid|cf_clearance)$" /-->

	<securecookie host="^\.bugcrowd\.com$" name=".+" />


	<rule from="^http:"
		to="https:" />

</ruleset>
