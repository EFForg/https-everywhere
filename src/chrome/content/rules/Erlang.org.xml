<!--
	Time out:
		erlang.org
		hades.erlang.org
		svn.erlang.org
		www1.erlang.org

-->
<ruleset name="Erlang" default_off="cert-chain">

	<target host="erlang.org" />
	<target host="www.erlang.org" />
	<target host="bugs.erlang.org" />
	<target host="www2.erlang.org" />

	<rule from="^http://erlang\.org/"
		to="https://www.erlang.org/" />

	<rule from="^http:"
		to="https:" />

</ruleset>
