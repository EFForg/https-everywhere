<!--
	Wildcard certificate and DNS records:
		- *.safehouse.com
-->

<ruleset name="SafeHouse.com">
	<target host="safehouse.com" />
	<target host="*.safehouse.com" />

	<rule from="^http://safehouse\.com/"
		to="https://safehouse.com/" />

	<rule from="^http://([\w-]+)\.safehouse\.com/"
		to="https://$1.safehouse.com/" />
</ruleset>
