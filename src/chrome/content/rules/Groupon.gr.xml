<ruleset name="Groupon.gr">
  <target host="groupon.gr" />
  <target host="*.groupon.gr" />

	<securecookie host="^(?:.*\.)?groupon\.gr$" name=".*"/>

  <rule from="^http://(\w+\.)?groupon\.gr/" to="https://$1groupon.gr/"/>
</ruleset>
