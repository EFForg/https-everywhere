<!--
	Nonfunctional subdomains:

		- blog *
		- tools *

	* Refused

-->
<ruleset name="Flattr">
  <target host="*.flattr.com" />
  <target host="flattr.com" />

	<securecookie host="^(?:.*\.)?flattr\.com$" name=".*"/>

  <rule from="^http://(?:www\.)?flattr\.com/" to="https://flattr.com/" />
  <rule from="^http://api\.flattr\.com/" to="https://api.flattr.com/" />
</ruleset>
