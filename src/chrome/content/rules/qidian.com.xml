<ruleset name="qidian.com (partial)">
	
	<target host="qidian.com" />
	<target host="www.qidian.com" />

	<rule from="^http://(www\.)?qidian\.com/" to="https://www.qidian.com/" />


	<target host="acs.qidian.com" />
	<target host="cj.qidian.com" />
	<target host="qrcode.if.qidian.com" />
	<target host="vn.if.qidian.com" />
	<target host="login.qidian.com" />
	<target host="m.qidian.com" />
	
	<rule from="^http://(acs|cj|qrcode\.if|vn\.if|login|m)\.qidian\.com/" to="https://$1.qidian.com/" />


	<target host="*.qidian.com" />

	<rule from="^http://(\d{4})\.qidian\.com/" to="https://www.qidian.com/Book/$1.aspx" />
		<test url="http://2825.qidian.com/" />

	<rule from="^http://(\d{7})\.qidian\.com/" to="https://www.qidian.com/Book/$1.aspx" />
		<test url="http://3508069.qidian.com/" />

</ruleset>
