<ruleset name="iAmplify (partial)">

	<target host="iamplify.com"/>
	<target host="*.iamplify.com"/>

	<securecookie host="^affiliates?\.iamplify\.com$" name=".+" />

	<rule from="^http://affiliate(s)?\.iamplify\.com/"
		to="https://affiliate$1.iamplify.com/"/>

	<rule from="^http://(\w+\.)?iamplify\.com/(shared_|store/(shared_)?)?(css/|images/|password_forgotten|signin)"
		to="https://$1iamplify.com/$1"/>

</ruleset>
