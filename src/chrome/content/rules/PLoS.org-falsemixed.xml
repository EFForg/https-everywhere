<!--
	For rules not causing false/broken MCB, see Public-Library-of-Science.xml.

-->
<ruleset name="PLoS.org (false MCB)" platform="mixedcontent">

	<target host="plos.org" />
	<target host="blogs.plos.org" />
	<target host="currents.plos.org" />
	<target host="www.plos.org" />


	<securecookie host="^(?:.*\.)?plos\.org$" name=".*" />


	<rule from="^http://((?:blogs|currents|www)\.)?plos\.org/"
		to="https://$1plos.org/" />

</ruleset>
