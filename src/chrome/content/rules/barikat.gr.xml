<ruleset name="barikat.gr">
  <target host="barikat.gr" />
  <target host="www.barikat.gr" />

  <securecookie host="^(?:www\.)?barikat\.gr$" name=".*"/>

  <rule from="^http://(?:www\.)?barikat\.gr/" to="https://barikat.gr/"/>
</ruleset>
