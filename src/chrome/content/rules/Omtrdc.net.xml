<!--
	For other Adobe coverage, see Adobe.xml.

	Mixed content:
		- Images from assets.omniture.com *
	* Secured by us

	If we are going to include ads and tracking info, let's at least do it by HTTPS.
-->

<ruleset name="omtrdc.net">
	<target host="*.sc.omtrdc.net" />
		<test url="http://a.sc.omtrdc.net/optout.html" />
		<test url="http://b.d1.sc.omtrdc.net/optout.html" />
		<test url="http://c.d2.sc.omtrdc.net/optout.html" />
	<target host="*.tt.omtrdc.net" />
		<test url="http://a.tt.omtrdc.net/optout" />
		<test url="http://b.tt.omtrdc.net/optout" />
		<test url="http://c.tt.omtrdc.net/optout" />


	<securecookie host="^(.*\.)?omtrdc\.net$" name=".+" />


	<rule from="^http://([\w-]+)\.(sc|tt)\.omtrdc\.net/"
		to="https://$1.$2.omtrdc.net/" />

	<rule from="^http://([\w-]+)\.d([1-3])\.sc\.omtrdc\.net/"
		to="https://$1.d$2.sc.omtrdc.net/" />
</ruleset>
