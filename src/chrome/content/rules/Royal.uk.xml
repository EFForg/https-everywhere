<!--
	Invalid certificate:
		www.everydayexceptional.royal.uk
-->
<ruleset name="Royal.uk">
	<target host="royal.uk" />
	<target host="www.royal.uk" />
	<target host="www.everydayexceptional.royal.uk" />

	<!--
		Yes, this is really how this redirect works! So, e.g.,
		<http://www.everydayexceptional.royal.uk/example> redirects to
		<http://www.royal.uk/search/working-for-usexample> (which we rewrite to
		HTTPS)
	-->
	<rule from="^http://www\.everydayexceptional\.royal\.uk/" to="https://www.royal.uk/search/working-for-us" />

	<rule from="^http:" to="https:" />
</ruleset>
