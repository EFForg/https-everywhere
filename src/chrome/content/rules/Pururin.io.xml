<!--
	Mixed content blocking:
		forum.pururin.io

-->
<ruleset name="Pururin.io">
	<target host="pururin.io" />
	<target host="www.pururin.io" />
	<target host="forum.pururin.io" />
		<exclusion pattern="http://forum\.pururin\.io/$" />
		<test url="http://forum.pururin.io/deferred.php" />
		<test url="http://forum.pururin.io/js/jquery/jquery-1.11.0.min.js" />
		<test url="http://forum.pururin.io/styles/brivium/tin/extra/arrow-heading.png" />

	<rule from="^http://forum\.pururin\.io/(deferred.php|js/|styles/)"
		to="https://forum.pururin.io/$1" />
	<rule from="^http://(www\.)?pururin\.io/"
		to="https://$1pururin.io/" />
</ruleset>
