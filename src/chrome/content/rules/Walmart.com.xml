	<!--	Redirect keeps args:
					-->
	<rule from="^http://localad\.walmart\.com/+(?=$|\?)"
		to="https://weeklyad.walmart.com/walmart/" />

	<rule from="^http://p13n-assets\.walmart\.com/"
