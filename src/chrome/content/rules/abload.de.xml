	<target host="abload.de" />
		<test url="https://abload.de/login.php" />
		<test url="https://abload.de/register.php" />
		<test url="https://abload.de/spenden.php/" />
		<test url="https://abload.de/spenden_en.php/" />
		<test url="https://abload.de/img/128px-https_everywherwps4q.png" />
		<test url="https://abload.de/thumb/128px-https_everywherwps4q.png" />
		<test url="https://abload.de/res/styles/main.css" />
	<target host="www.abload.de" />
		<test url="https://www.abload.de/login.php" />
		<test url="https://www.abload.de/register.php" />
		<test url="https://www.abload.de/spenden.php/" />
		<test url="https://www.abload.de/spenden_en.php/" />
		<test url="https://www.abload.de/img/128px-https_everywherwps4q.png" />
		<test url="https://www.abload.de/thumb/128px-https_everywherwps4q.png" />
		<test url="https://www.abload.de/res/styles/main.css" />
	
	<!-- most files within root directory (index.php, dateien.php, tool.php,
	blog.php, hilfe.php, contact.php, legal.php, team.php, partner.php,
	embedding.php, partner.php and jobs.php) redirect to http -->
	<rule from="^http://(www\.)?abload\.de/(login\.php|register\.php|spenden\.php|spenden_en\.php|img/|res/|thubmb/)"
		to="https://$1abload.de/$2" />
</ruleset>
