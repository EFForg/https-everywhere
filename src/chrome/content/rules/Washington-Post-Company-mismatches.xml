<!--
	For rules that are on by default, see Washington-Post-Company.xml.

-->
<ruleset name="Washington Post Company (mismatches)" default_off="mismatched">

	<target host="washingtonpostmedia.com" />
	<target host="www.washingtonpostmedia.com" />
	<target host="washpostco.com" />
	<target host="www.washpostco.com" />


	<rule from="^http://(?:www\.)?washingtonpostmedia\.com/"
		to="https://www.washingtonpostmedia.com/" />

	<rule from="^http://(?:www\.)?washpostco\.com/"
		to="https://www.washpostco.com/" />

</ruleset>
