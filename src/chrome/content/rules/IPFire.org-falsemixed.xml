<!--
	For rules that are on by default, see IPFire.org.xml.
-->
<ruleset name="IPFire.org" platform="cacert mixedcontent">

	<target host="ipfire.org" />
	<target host="fireinfo.ipfire.org" />
	<target host="planet.ipfire.org" />
	<target host="static.ipfire.org" />
	<target host="wishlist.ipfire.org" />
	<target host="www.ipfire.org" />


	<securecookie host="^fireinfo\.ipfire\.org$" name=".+" />


	<!--	Server drops path:
					-->
	<rule from="^http:"
		to="https:" />

</ruleset>
