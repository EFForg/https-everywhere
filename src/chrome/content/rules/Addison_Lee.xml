<ruleset name="Addison Lee">
    <target host="addisonlee.com" />
    <target host="*.addisonlee.com" />

    <securecookie host="^(?:.*\.)?addisonlee\.com$" name=".+" />

    <rule from="^http://addisonlee\.com/"
        to="https://www.addisonlee.com/"/>
    <rule from="^http://([^/:@]+)?\.addisonlee\.com/"
        to="https://$1.addisonlee.com/" />
</ruleset>
