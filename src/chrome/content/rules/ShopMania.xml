<!--
	Partially covered domains:

		- biz.shopmania.com *
		- partner.shopmania.com *
		- www.shopmania.com *

		- biz.shopmania.es *
		- partner.shopmania.es *
		- www.shopmania.es *

	Fully covered domains:

		- cp.shopmania.com
		- cp.shopmania.es

		- fl\d+.shopmania.org:

			- fl1
			- fl22

		- im\d+.shopmania.org

			- im[14]

	Problematic subdomains:

		- dashboard (invalid cert)
		- partner.shopmania.com
		- billing
		- cdn & cdn[1-3] (invalid cert)
		- f\d+ (invalid cert)
		- im\d+ (invalid cert)

-->
<ruleset name="ShopMania (partial)">

	<target host="shopmania.com" />
	<target host="www.shopmania.com" />
	<target host="biz.shopmania.com" />
	<target host="cp.shopmania.com" />
	<target host="dashboard.shopmania.com" />
	<target host="adm.shopmania.com" />
	<target host="aff.shopmania.com" />
	<target host="shopmania.es" />
	<target host="www.shopmania.es" />
	<target host="biz.shopmania.es" />
	<target host="cp.shopmania.es" />
	<target host="dashboard.shopmania.es" />
	<target host="adm.shopmania.es" />
	<target host="aff.shopmania.es" />

	<rule from="^http://((?:biz|cp)\.)?shopmania\.(com|es)/"
		to="https://www.merchantpro.com/" />

	<rule from="^http://((?:dashboard|www)\.)?shopmania\.(com|es)/"
		to="https://www.shopmania.$2/" />

	<!-- Applies to adm., aff. -->
	<rule from="^http:"
		to="https:" />
</ruleset>
