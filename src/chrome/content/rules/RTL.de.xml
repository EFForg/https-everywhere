<!--
	This domain contains a wildcard DNS record.
-->
<ruleset name="RTL.de (partial)" >

	<target host="rtl.de" />
	<target host="www.rtl.de" />
	<target host="autoimg.rtl.de" />
	<target host="bilder.rtl.de" />
	<target host="gzsz.rtl.de" />
	<target host="kommunikation.rtl.de" />
	<target host="spiele.rtl.de" />

	<securecookie host=".+" name=".+" />

	<!-- Refused on https://rtl.de/, http://rtl.de/ redirects to https://www.rtl.de/. -->
	<rule from="^http://rtl\.de/" to="https://www.rtl.de/" />

	<rule from="^http:"	to="https:" />

</ruleset>
