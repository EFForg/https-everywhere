<!--
	Problematic subdomains:

		- ^	(cert only matches *.codeplex.com)

-->
<ruleset name="Codeplex">
  <target host="codeplex.com" />
  <target host="*.codeplex.com" />

  <securecookie host="^(.*\.)?codeplex\.com$" name=".*" />

  <exclusion pattern="^http://download\.codeplex\.com/" />
  <exclusion pattern="^http://i1\.codeplex\.com/" />
  <exclusion pattern="^http://i2\.codeplex\.com/" />
  <exclusion pattern="^http://i3\.codeplex\.com/" />

  <rule from="^http://(?:www\.)?codeplex\.com/" to="https://www.codeplex.com/"/>
  <rule from="^http://([^/:@\.]+)\.codeplex\.com/" to="https://$1.codeplex.com/"/>
</ruleset>
