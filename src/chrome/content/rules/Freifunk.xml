<!--
	For domains with CAcert certificates, see Freifunk.net-cacert.xml.


	Nonfunctional subdomains:

		- blog ¹
		- bug ¹
		- global ¹
		- blog.guetersloh ¹
		- pad ¹
		- paderborn ¹

	¹ Refused


	Problematic subdomains:

		- community ¹
		- events ²
		- facebook ¹
		- impress ¹
		- mailinglisten ¹
		- twitter ¹
		- vimeo ¹
		- wiki ³
		- youtube ¹

	¹ CAcert, expired, mismatched
	² CAcert, expired
	³ CAcert


	Fully covered subdomains:

		- facebook	(→ www.facebook.com)
		- forum
		- hamburg
		- twitter	(→ twitter.com)
		- vimeo		(→ vimeo.com)
		- www
		- youtube	(→ www.youtube.com)

-->
<ruleset name="Freifunk.net (partial)">

	<target host="freifunk.net"/>
	<target host="*.freifunk.net"/>
		<!--
			Redirect to http:
						-->
		<!--exclusion pattern="^http://freifunk\.net/$" /-->
		<!--
			Exceptions:
					-->
		<exclusion pattern="^http://freifunk\.net/+(?!favicon\.ico|wp-content/|wp-includes/)" />

	<!--	Redirect drops path but not args:
							-->
	<rule from="^http://facebook\.freifunk\.net/[^?]*"
		to="https://www.facebook.com/pages/Freifunk/54553170762" />

	<!--	Redirect drops path but not args:
							-->
	<rule from="^http://twitter\.freifunk\.net/[^?]*"
		to="https://twitter.com/freifunk" />

	<!--	Redirect drops path but not args:
							-->
	<rule from="^http://vimeo\.freifunk\.net/[^?]*"
		to="https://vimeo.com/user20804353" />

	<!--	Redirect drops path but not args:
							-->
	<rule from="^http://youtube\.freifunk\.net/[^?]*"
		to="https://www.youtube.com/user/FREIFUNK2013" />

	<rule from="^http://((?:forum|hamburg|www)\.)?freifunk\.net/"
		to="https://$1freifunk.net/"/>

	<securecookie host="forum\.freifunk\.net$" name=".+" />

	<test url="http://youtube.freifunk.net" />
	<test url="http://twitter.freifunk.net" />
	<test url="http://vimeo.freifunk.net" />
	<test url="http://facebook.freifunk.net" />
	<test url="http://freifunk.net/wp-content/plugins/contact-form-7/includes/css/styles.css" />
	<test url="http://freifunk.net" />
	<test url="http://freifunk.net/favicon.ico" />
	<test url="http://forum.freifunk.net" />
	<test url="http://hamburg.freifunk.net" />
	<test url="http://www.freifunk.net" />

</ruleset>
