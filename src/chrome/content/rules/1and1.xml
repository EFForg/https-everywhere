<!-- Do not change -> approved by 1and1 staff -->
<ruleset name="1and1">

    <!--
		The following URI's get redirected to 1and1.com by the corresponding server:
		- 1and1-storage.com
	-->
    <target host=  "1and1.com" />
    <target host="*.1and1.com" />

    <target host=  "1and1.ca" /> <!-- only www -> redirect manually -->
    <target host="*.1and1.ca" />

    <target host=  "1and1.co.uk" /> <!-- only www -> redirect manually -->
    <target host="*.1and1.co.uk" />

    <target host=  "1and1.fr" />
    <target host="*.1and1.fr" />

    <target host=  "1and1.es" /> <!-- only www -> redirect manually -->
    <target host="*.1and1.es" />

    <target host=  "1and1.it" />
    <target host="*.1and1.it" />

    <target host=  "1and1.mx" />
    <target host="*.1and1.mx" />

    <target host=  "1and1.pl" />
    <target host="*.1and1.pl" />

    <!-- ############################################ -->

    <!--
		The following URI's get redirected to 1und1.de by the corresponding server:
		- 1und1.com
		- 1und1.info
		- 1and1-storage.eu
		- 1and1-storage.net
	-->
    <target host=  "1und1.de" /> <!-- only www -> redirect manually -->
    <target host="*.1und1.de" />

    <target host=  "1und1.at" />
    <target host="*.1und1.at" />

    <target host=  "1und1-freenet.de" />
    <target host="*.1und1-freenet.de" />

    <target host=  "1und1-hostingpartner.de" />
    <target host="*.1und1-hostingpartner.de" />

    <target host=  "1und1-merchandising-shop.de" />
    <target host="*.1und1-merchandising-shop.de" />

    <target host=  "1und1-mm.de" />
    <target host="*.1und1-mm.de" />

    <target host=  "1und1-partner.de" />
    <target host="*.1und1-partner.de" />

    <target host=  "1und1-premiumpartner.de" />
    <target host="*.1und1-premiumpartner.de" />

    <!-- ############################################ -->

    <target host="*.auth.1u1s.de" /> <!-- Certificate only valid for *.auth.1u1s.de -->

    <!-- Cookies -->

    <securecookie host=".*\.1and1\.*" name=".+" />

    <securecookie host=".*\.1und1\.de$" name=".+" />
    <securecookie host=".*\.1und1-freenet\.de" name=".+" />
    <securecookie host=".*\.1und1-hostingpartner\.de" name=".+" />
    <securecookie host=".*\.1und1-merchandising-shop\.de" name=".+" />
    <securecookie host=".*\.1und1-mm" name=".+" />
    <securecookie host=".*\.1und1-partner\.de" name=".+" />
    <securecookie host=".*\.1und1-premiumpartner\.de" name=".+" />

    <securecookie host=".*\.1u1s\.de$" name=".+" />

    <!-- Rules -->

    <rule from="^http://1and1\.ca/"
          to="https://www.1and1.ca/" />

    <rule from="^http://1and1\.co\.uk/"
          to="https://www.1and1.co.uk/" />

    <rule from="^http://1and1\.es/"
          to="https://www.1and1.es/" />

    <rule from="^http://1und1\.de/"
          to="https://www.1und1.de/" />

    <rule from="^http:"
          to="https:" />

    <!-- Tests -->

    <test url="http://www.1and1.com" />

    <test url="http://www.1and1.ca" />
    <test url="http://1and1.ca" />

    <test url="http://www.1and1.co.uk" />
    <test url="http://1and1.co.uk" />

    <test url="http://www.1and1.fr" />

    <test url="http://www.1and1.es" />
    <test url="http://1and1.es" />

    <test url="http://www.1and1.it" />
    <test url="http://www.1and1.mx" />
    <test url="http://www.1and1.pl" />

    <test url="http://www.1und1.de" />
    <test url="http://1und1.de" />

    <test url="http://www.1und1.at" />
    <test url="http://www.1und1-freenet.de" />
    <test url="http://www.1und1-hostingpartner.de" />
    <test url="http://www.1und1-merchandising-shop.de" />
    <test url="http://www.1und1-mm.de" />
    <test url="http://www.1und1-partner.de" />
    <test url="http://www.1und1-premiumpartner.de" />

    <test url="http://test.auth.1u1s.de" />

</ruleset>