<!--
	Problematic hosts in *avito.ru:

		- (www.)? ᵀ
		- m ᵀ

	ᵀ Blocks Tor users

-->
<ruleset name="Avito.ru">

	<target host="avito.ru" />
	<target host="m.avito.ru" />
	<target host="support.avito.ru" />
	<target host="www.avito.ru" />
	<target host="promo.avito.ru" />


	<securecookie host="^\w" name="." />


	<rule from="^http:"
		to="https:" />

</ruleset>
