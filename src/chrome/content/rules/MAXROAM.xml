<ruleset name="MAXROAM (partial)">

	<target host="maxroam.com" />
	<target host="www.maxroam.com" />
	<target host="hostels.maxroam.com" />


	<!--	Some pages redirect to http.	-->
	<rule from="^http://(www\.)?maxroam\.com/(App_Themes/|images/|shared/|Shop/OnePageCheckout\.aspx)"
		to="https://$1maxroam.com/$2" />

	<!--	Some pages redirect to http.	-->
	<rule from="^http://hostels\.maxroam\.com/(App_Themes/|css/|favicon\.ico|images/|shared/|Shop/Checkout\.aspx)"
		to="https://hostels.maxroam.com/$1" />

</ruleset>
