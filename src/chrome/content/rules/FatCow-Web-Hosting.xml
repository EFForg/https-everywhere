<ruleset name="FatCow Web Hosting" platform="mixedcontent">

	<target host="fatcow.com"/>
	<target host="*.fatcow.com"/>

	<securecookie host="^(?:.*\.)?fatcow\.com$" name=".*"/>

	<!-- sometimes appends :443	-->
	<rule from="^http://(\w+\.)?fatcow\.com(:443)?/"
		to="https://$1fatcow.com$2/"/>

</ruleset>
