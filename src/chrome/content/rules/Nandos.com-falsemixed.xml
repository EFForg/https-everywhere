<!--
	For rules not causing false/broken MCB, see Nandos.com.xml.

-->
<ruleset name="Nandos.com (false MCB)" platform="mixedcontent">

	<target host="nandos.com" />
	<target host="*.nandos.com" />
		<!--
			Handled in Nandos.com.xml:
							-->
		<!--exclusion pattern="^http://(www\.)?nandos\.com/(favicon\.ico|sites/)" /-->


	<securecookie host="^(?:www)?\.nandos\.com$" name=".+" />


	<rule from="^http://(?:www\.)?nandos\.com/(?!favicon\.ico|sites/)"
		to="https://www.nandos.com/" />

</ruleset>
