			<!--	-ve:
					-->
			<test url="http://www.trust-guard.com/favicon.ico" />
			<test url="http://www.trust-guard.com/Images/xbutton.gif" />
			<test url="http://www.trust-guard.com/Templates/2.0/css/style.css" />


