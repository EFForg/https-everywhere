<!--

	Nonfunctional subdomains:

		- gat	(times out)

	Problematic subdomains:

		- ^	(invalid cert)
		- bn	(invalid cert)
		- jp	(invalid cert)
		- mobile	(invalid cert)
		- www1	(invalid cert)
		- dxjob	(invalid cert)

	Mixed content:

		- m
		- www

-->
<ruleset name="DxLive.com">

	<target host="aff-en.dxlive.com" />
	<target host="aff-images.dxlive.com" />
	<target host="aff-jp.dxlive.com" />
	<target host="eapi.dxlive.com" />
	<target host="en.dxlive.com" />
	<target host="imageup.dxlive.com" />
	<target host="secure.dxlive.com" />
	<target host="secure2.dxlive.com" />
	<target host="stats.dtiserv2.com" />

	<exclusion pattern="^http://eapi\.dxlive\.com/$" />

	<test url="http://eapi.dxlive.com/flash/getSessionType/mmAINAmm" />
	<test url="http://stats.dtiserv2.com/fcgis/dxjob.fcgi" />

	<rule from="^http:"
		to="https:" />

</ruleset>
