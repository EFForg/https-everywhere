<ruleset name="Desire2learn.com">

	<target host="desire2learn.com" />
	<target host="*.desire2learn.com" />


	<securecookie host="^(?:.*\.)?desire2learn\.com$" name=".+" />


	<rule from="^http://((?:community|lmscloud\.edev|pt\.valence|www)\.)?desire2learn\.com/"
		to="https://$1desire2learn.com/" />

</ruleset>