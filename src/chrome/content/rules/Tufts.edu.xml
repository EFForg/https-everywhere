	<rule from="^http://(ase|exchange|it|(?:illiad\.|www\.)?library|m|medicine|webapps\.moit|now|sites|trunk|(?:ests01|infoboard-updates|isis|wikis)\.uit|whitepages)\.tufts\.edu/"
