<!--
	For rules not causing false/broken MCB, see Threat_Metrix.com.xml.

-->
<ruleset name="ThreatMetrix.com (false MCB)" platform="mixedcontent">

	<target host="threatmetrix.com" />
	<target host="*.threatmetrix.com" />


	<securecookie host="^(?:www\.)?threatmetrix\.com$" name=".+" />


	<rule from="^http://(www\.)?threatmetrix\.com/"
		to="https://$1threatmetrix.com/" />

</ruleset>
