<!--
		For other Fastmail coverage, see Fastmail.xml


		Fastmail user websites

		If www.example.com was hosted on Fastmail, it would also be available 
		as http://www.example.com.user.fm/ and https://user.fm/www.example.com/
-->
<ruleset name="Fastmail User Websites">
	<target host="user.fm" />
	<target host="*.user.fm" />
		<test url="http://robm.fastmail.fm.user.fm/articles/arthurs_walk.html" />
		<test url="http://www.robm.fastmail.fm.user.fm/articles/arthurs_walk.html" />
		<test url="http://robm.fastmail.fm.user.fm/" />

	<rule from="^http://([\w.-]+)\.user\.fm/" to="https://user.fm/$1/" />
	<rule from="^http:" to="https:" />
</ruleset>
