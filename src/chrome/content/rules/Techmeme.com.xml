<!--
	Non-functional hosts
		Invalid certificate:
			 - alt.techmeme.com
			 - ftp.techmeme.com
			 - mail.techmeme.com
			 - news.techmeme.com
			 - search.techmeme.com
-->
<ruleset name="Techmeme.com">
	<target host="techmeme.com" />
	<target host="www.techmeme.com" />
	<target host="search.techmeme.com" />

	<rule from="^http://search\.techmeme\.com/"
		  	to="https://www.techmeme.com/search/" />

	<rule from="^http:"
		  	to="https:" />
</ruleset>
