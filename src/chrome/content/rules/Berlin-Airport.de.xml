<ruleset name="Berlin Airport">
    <target host="berlin-airport.de" />
    <target host="*.berlin-airport.de" />

    <rule from="^http://berlin-airport\.de/"
        to="https://www.berlin-airport.de/"/>
    <rule from="^http://([^/:@]+)?\.berlin-airport\.de/"
        to="https://$1.berlin-airport.de/" />
</ruleset>
