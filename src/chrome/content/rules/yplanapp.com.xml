<ruleset name="YPlan">

	<target host="*.yplanapp.com" />
	<target host="yplanapp.com" />

	<securecookie host="^.*\.?yplanapp\.com$" name=".+" />

	<rule from="^http://(www\.)?yplanapp\.com/"
		to="https://yplanapp.com/" />
	<rule from="^http:"
		to="https:" />

	<test url="http://portal.yplanapp.com/" />
	<test url="http://email.yplanapp.com/" />
	<test url="http://www.yplanapp.com/" />
	<test url="http://yplanapp.com/" />

</ruleset>
