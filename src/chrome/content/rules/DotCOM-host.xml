<ruleset name="dotCOM host">

	<target host="dotcomhost.com" />
	<target host="*.dotcomhost.com" />
	<!--	* for cross-domain cookie.	-->
	<target host="*.webmail.dotcomhost.com" />


	<securecookie host="^(?:.*\.)?dotcomhost\.com$" name=".*" />


	<!--	Observed subdomains:

			- my
			- webmail
			- www
				-->
	<rule from="^http://(\w+\.)?dotcomhost\.com/"
		to="https://$1dotcomhost.com/" />

</ruleset>
