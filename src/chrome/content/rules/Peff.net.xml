<!--
	Invalid certificate:
		- www.peff.net, equivalent to peff.net
		- a.mx.peff.net
		- a.ns.peff.net
-->

<ruleset name="Peff.net">
	<target host="peff.net" />
	<target host="www.peff.net" />

	<rule from="^http://www\.peff\.net/"
		  to="https://peff.net/" />

	<rule from="^http:" to="https:" />
</ruleset>
