# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

[src/chrome/content/rules/*.xml]
indent_style = tab
indent_size = 4

[*.{css,html,js,sh}]
indent_style = space
indent_size = 2

[*.py]
indent_style = space
indent_size = 4
