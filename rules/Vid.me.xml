<!--
	Fully covered hosts in *vid.me:

		- (www.)?
		- docs

-->
<ruleset name="Vid.me">

	<!--	Direct rewrites:
				-->
	<target host="vid.me" />
	<target host="docs.vid.me" />
	<target host="www.vid.me" />


	<!--	Not secured by server:
					-->
	<!--securecookie host="^\.vid\.me$" name="^rid$" /-->

	<securecookie host="^\.vid\.me$" name=".+" />


	<rule from="^http:"
		to="https:" />

</ruleset>
