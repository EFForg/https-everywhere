<!--
	For rules not causing false/broken MCB, see KBPublisher.com.xml.

-->
<ruleset name="KBPublisher.com (false MCB)" platform="mixedcontent">

	<target host="www.kbpublisher.com" />
		<!--
			Handled in KBPublisher.com.xml:
							-->
		<!--exclusion pattern="^http://www\.kbpublisher\.com/(captcha\.php|client/|css/|favicon\.ico|images/|(login|password|signup)($|[?/])|site/)" /-->


	<securecookie host="^www\.kbpublisher\.com$" name=".+" />


	<rule from="^http://www\.kbpublisher\.com/(?!captcha\.php|client/|css/|favicon\.ico|images/|(?:login|password|signup)(?:$|[?/])|site/)"
		to="https://www.kbpublisher.com/" />

</ruleset>
