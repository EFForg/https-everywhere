<ruleset name="Roku.com (partial)">

	<target host="roku.com" />
	<target host="*.roku.com" />


	<rule from="^http://((?:owner|www|wwwimg)\.)?roku\.com/"
		to="https://$1roku.com/" />

	<rule from="^http://support\.roku\.com/(?=favicon\.ico|generated/|images/|system/)"
		to="https://roku.zendesk.com/" />

</ruleset>
