<ruleset name="Pusher (partial)">

	<target host="pusherapp.com" />
	<target host="*.pusherapp.com" />


	<securecookie host="^app\.pusherapp\.com$" name=".+" />


	<rule from="^http://(?:www\.)?pusherapp\.com/"
		to="https://pusher.com/" />

	<rule from="^http://(app|ws)\.pusherapp\.com/"
		to="https://$1.pusherapp.com/" />

</ruleset>
