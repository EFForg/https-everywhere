<ruleset name="Applebee's" platform="mixedcontent">
  <target host="applebees.com" />
  <target host="*.applebees.com" />

  <rule from="^http://applebees\.com/"
          to="https://applebees.com/" />
  <rule from="^http://(my|www)\.applebees\.com/"
          to="https://$1.applebees.com/" />
</ruleset>