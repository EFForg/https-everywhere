<ruleset name="iPage">

	<target host="ipage.com" />
	<target host="*.ipage.com" />


	<securecookie host=".*\.ipage\.com$" name=".+" />


	<!--	^ redirects to www over http,
		so copy that behavior:
					-->
	<rule from="^http://(?:www\.)?ipage\.com/"
		to="https://www.ipage.com/" />

	<rule from="^http://([\w-]+)\.ipage\.com/"
		to="https://$1.ipage.com/" />

</ruleset>
