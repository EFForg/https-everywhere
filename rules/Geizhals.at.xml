<ruleset name="Geizhals.at">

	<target host="geizhals.at" />
	<target host="*.geizhals.at" />


	<!--	Redirects to !www over http, doesn't over https.	-->
	<rule from="^http://(?:www\.)?geizhals\.at/"
		to="https://geizhals.at/" />

	<rule from="^http://(forum|gewinnspiel|unternehmen)\.geizhals\.at/"
		to="https://$1.geizhals.at/" />

</ruleset>
