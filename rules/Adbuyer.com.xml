<ruleset name="adbuyer.com">

	<target host="adbuyer.com" />
	<target host="*.adbuyer.com" />


	<securecookie host="^(?:gbid)?\.adbuyer\.com$" name=".+" />


	<rule from="^http://(?:www\.)?adbuyer\.com/([^?]*)(\?:.*)?"
		to="https://app.mbuy.com/$1" />

	<rule from="^http://(gbid|pixel)\.adbuyer\.com/"
		to="https://$1.adbuyer.com/" />

</ruleset>