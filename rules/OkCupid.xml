	<!--	Not secured by server:
					-->
	<!--securecookie host="^\.okcupid\.com$" name="^(__cfuid|cf_clearance|guest)$" /-->

	<securecookie host="^\.okcupid\.com$" name=".+" />


	<rule from="^http:"
		to="https:" />

</ruleset>
