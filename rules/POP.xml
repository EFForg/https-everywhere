<ruleset name="POP (partial)" default_off='failed ruleset test'>

	<target host="pop.com.br"/>
	<target host="www.pop.com.br"/>

	<rule from="^http://pop\.com\.br/"
		to="https://pop.com.br/"/>

	<!--	the same directories within an area directory redirect to http
		e.g.:
			- home/_css/
			- header/_fonts/		-->
