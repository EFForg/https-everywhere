<!--
	Observed subdomains:

		- adherents
		- wiki
		- www

-->
<ruleset name="April.org" platform="mixedcontent">

	<target host="april.org" />
	<target host="*.april.org" />


	<securecookie host="^.*\.april\.org$" name=".+" />


	<rule from="^http://([^/:@]+\.)?april\.org/"
		to="https://$1april.org/" />

</ruleset>
