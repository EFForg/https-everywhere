<!--
	Fully covered subdomains:

		- (www.)
		- blog
		- doc
		- forums
		- ftp
		- garnet
		- issues
		- wiki


	Mixed content:

		- Image on blog from blog *

	* Secured by us


-->
<ruleset name="OpenMandriva.org" platform="cacert">

	<!--	Direct rewrites:
				-->
	<target host="openmandriva.org" />
	<target host="blog.openmandriva.org" />
	<target host="doc.openmandriva.org" />
	<target host="forums.openmandriva.org" />
	<target host="ftp.openmandriva.org" />
	<target host="garnet.openmandriva.org" />
	<target host="issues.openmandriva.org" />
	<target host="wiki.openmandriva.org" />
	<target host="www.openmandriva.org" />


	<securecookie host="^(?:\.?blog|doc|\.ftp|issues|\.?wiki|\.www)?\.openmandriva\.org$" name=".+" />


	<rule from="^http:"
		to="https:" />

</ruleset>
