<ruleset name="PropertyInvesting.com (partial)">

	<target host="propertyinvesting.com" />
	<target host="www.propertyinvesting.com" />


	<!--	Some pages redirect once to http, then on second fetch don't.

		These pages continue redirecting to http:

			- iclub$
			- user$
			- user/register$
					-->
	<rule from="^http://(www\.)?propertyinvesting\.com/($|blog$|faqs$|files/|forums$|forums/active$|front$|modules/|resources$|search$|strategies$|themes/)"
		to="https://$1propertyinvesting.com/$2" />

</ruleset>
