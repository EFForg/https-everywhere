<ruleset name="CERT-Bund">
    <target host="cert-bund.de" />
    <target host="*.cert-bund.de" />

    <securecookie host="^(?:.*\.)?cert-bund\.de$" name=".+" />

    <rule from="^http://cert-bund\.de/"
        to="https://www.cert-bund.de/" />
    <rule from="^http://([^/:@]+)?\.cert-bund\.de/"
        to="https://$1.cert-bund.de/" />
</ruleset>
