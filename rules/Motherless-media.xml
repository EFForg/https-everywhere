<!--
	Nonfunctional subdomains:

		- s1 *
		- s2
		- s[3-9] *
		- s1[0-4] *

	* Times out
-->
<ruleset name="Motherless media (partial)" default_off="Certificate mismatch">

	<target host="motherlessmedia.com" />
	<target host="avatars.motherlessmedia.com" />
	<target host="thumbs.motherlessmedia.com" />
	<target host="www.motherlessmedia.com" />

	<rule from="^http://(?:www\.)?motherlessmedia\.com/"
		to="https://motherlessmedia.com/" />

	<rule from="^http://(avatars|thumbs)\.motherlessmedia\.com/"
		to="https://$1.motherlessmedia.com/" />

</ruleset>
