<ruleset name="Comparis.ch">
        <target host="comparis.ch" />
        <target host="*.comparis.ch" />
        <securecookie host="^(?:.*\.)?comparis\.ch$" name=".*" />

        <rule from="^http://comparis\.ch/"
            to="https://www.comparis.ch/" />
        <rule from="^http://([^/:@]+)?\.comparis\.ch/"
            to="https://$1.comparis.ch/"/>
</ruleset>
