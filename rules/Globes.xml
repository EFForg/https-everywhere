<ruleset name="Globes (partial)">

	<target host="globes.co.il" />
	<target host="www.globes.co.il" />


	<securecookie host="^www\.globes\.co\.il$" name=".+" />


	<rule from="^http://(?:www\.)?globes\.co\.il/"
		to="https://www.globes.co.il/" />

</ruleset>